<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>

            <solid android:color="@color/login_btn_select" />

            <corners android:radius="25dp" />

            <padding
                android:bottom="14dp"
                android:top="14dp"
                android:left="20dp"
                android:right="20dp" />

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>

            <solid android:color="@color/login_btn" />

            <corners android:radius="25dp" />

            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="20dp"
                android:right="20dp" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>

            <solid android:color="@color/login_btn_select" />

            <corners android:radius="25dp" />

            <padding
                android:bottom="14dp"
                android:top="14dp"
                android:left="20dp"
                android:right="20dp" />

        </shape>
    </item>



</selector>