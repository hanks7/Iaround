<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <net.iaround.ui.chatbar.SearchListView
        android:id="@+id/lv_attention"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/common_white"
        android:cacheColorHint="#00000000"
        android:drawSelectorOnTop="false"
        android:divider="@null"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:showDividers="none"
        android:listSelector="@android:color/white">


    </net.iaround.ui.chatbar.SearchListView>

    <LinearLayout
        android:id="@+id/ll_empty_attention"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="66dp"
            android:src="@drawable/message_fragment_no_data" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:text="@string/msg_fragment_no_data"
            android:textColor="@color/chat_bar_empty_hint"
            android:textSize="15sp" />
    </LinearLayout>



</RelativeLayout>
