<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="11dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/gradient_bg"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <net.iaround.ui.view.HeadPhotoView
            android:id="@+id/iv_send_user_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="2dp">

            <TextView
                android:id="@+id/tv_send_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="小志先森"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/send_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_send_user_name"
                android:text="送"
                android:textColor="#F6FF00"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/tv_receive_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_send_user_name"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/send_tv"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="4"
                android:singleLine="true"
                android:text="爱笑的眼睛"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/gift_type"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:id="@+id/array_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/gift_array"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:text="1314"
                android:textColor="#F6FF00"
                android:textSize="13sp" />

            <TextView
                android:layout_width="14dp"
                android:layout_height="6dp"
                android:background="@drawable/icon_series_tv" />
        </LinearLayout>

        <net.iaround.ui.view.pipeline.RideTextView
            android:id="@+id/gift_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="1314"
            android:textColor="#F6FF00"
            android:textSize="24sp" />

    </LinearLayout>


</FrameLayout>