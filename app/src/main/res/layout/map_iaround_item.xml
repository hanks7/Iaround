<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rlNoshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/no_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:singleLine="true"
            android:text="不显示位置"
            android:textColor="@color/c_999999"
            android:textSize="16dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@id/no_show"
            android:background="@color/c_cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/common_white"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/ivLocationIcon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/z_dynamic_addresslist_loctionicon_normal" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/ivLocationIcon"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="御发商务2楼"
            android:textColor="@color/c_333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@id/ivLocationIcon"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="广东省广州市天河区黄埔大道中336号"
            android:textColor="@color/c_999999"
            android:textSize="12dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@id/address"
            android:layout_toRightOf="@id/ivLocationIcon"
            android:background="@color/c_cccccc" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/z_dynamic_addresslist_selected_icon" />

</RelativeLayout>