<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_basic_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/recommend_gifts_title_price"
        android:textColor="#333333"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#e3e3e3" />

    <RelativeLayout
        android:id="@+id/gifts_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="18dp" >

        <TextView
            android:id="@+id/gifts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="18dp" />

        <net.iaround.ui.comon.NetImageView
            android:id="@+id/gifts_icon"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_below="@+id/gifts_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp" />

        <TextView
            android:id="@+id/gifts_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gifts_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/btn_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gifts_price"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/giftsclassify_next_btn_selector"
                android:text="@string/recommend_gifts_next"
                android:textColor="#333333"
                android:textSize="16dp" />

            <Button
                android:id="@+id/send_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/giftsclassify_send_btn_selector"
                android:text="@string/recommend_gifts_send"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/footview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_ly"
            android:layout_marginTop="29dp" >

            <View
                android:id="@+id/divider_left"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tvFoot"
                android:background="#e3e3e3" />

            <TextView
                android:id="@+id/tvFoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/recommend_gifts_more"
                android:textColor="#999999"
                android:textSize="11dp" />

            <View
                android:id="@+id/divider_right"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tvFoot"
                android:background="#e3e3e3" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>