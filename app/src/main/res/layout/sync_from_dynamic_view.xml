<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white" >
    
    <ImageView
        android:id="@+id/sync_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/dynamic_arrow" />

    <RelativeLayout
        android:id="@+id/topic_sync_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/sync_item_view_shape" >
        
        <TextView
            android:id="@+id/sync_entrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/share_sync_link_btn_bg"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="@string/sync_share_title_bar_link_context"
            android:textColor="#319AFE" />
        
        <RelativeLayout
            android:id="@+id/sync_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/sync_entrance" >
            
            <TextView
            android:id="@+id/sync_first_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/postbar_sync_dynamic_first_text"
            android:textColor="#7A7A7A"
            android:textSize="16dp" />
        
        <TextView
            android:id="@+id/sync_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sync_first_text"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxWidth="100dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#444444"
            android:textSize="16dp" />
        
        <TextView
            android:id="@+id/sync_second_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sync_first_text"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/sync_name"
            android:paddingBottom="10dp"
            android:text="@string/postbar_sync_dynamic_second_text"
            android:textColor="#7A7A7A"
            android:textSize="16dp" />
            
        </RelativeLayout>
                
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/c_ecebf1" />

</LinearLayout>
