<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView android:id="@+id/group_type_img"
        android:layout_height="@dimen/y150"
        android:layout_width="@dimen/y150"
        />

    <TextView android:id="@+id/group_type_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/group_type_img"
        android:layout_marginTop="@dimen/y30"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y60"
        android:textSize="@dimen/y36"
        android:textColor="@color/group_create_bg"/>


</RelativeLayout>
