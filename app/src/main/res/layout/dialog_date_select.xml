<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#11ffffff">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y462"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/dialog_date_select"
        >
        <!--38ADFF颜色-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y42"
            android:layout_marginBottom="@dimen/y43"
            android:text="选择时间"
            android:gravity="center"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/y45"
            android:layout_gravity="center"/>
        <View
            android:layout_width="@dimen/x825"
            android:layout_height="@dimen/y1"
            android:layout_marginRight="@dimen/x3"
            android:background="#E4E4E4"/>
        <LinearLayout
            android:layout_width="@dimen/x825"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <net.iaround.ui.view.DateWheelView
                android:id="@+id/wv_year"
                android:layout_width="@dimen/x412"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y49"/>
            <net.iaround.ui.view.DateWheelView
                android:id="@+id/wv_month"
                android:layout_width="@dimen/x413"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y49"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x70"
                android:layout_marginBottom="@dimen/y50"
                android:layout_marginTop="@dimen/y80"
                android:gravity="center"
                android:background="@null"
                android:text="确定"
                android:textColor="#FF4064"
                android:textSize="@dimen/y52"/>
            <Button
                android:id="@+id/btn_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginBottom="@dimen/y50"
                android:layout_marginTop="@dimen/y80"
                android:layout_toLeftOf="@+id/btn_yes"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="取消"
                android:textColor="#FF4064"
                android:textSize="@dimen/y52"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>