<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--ios风格中多选删除按钮-->
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/nearby_filter_checkbox_selector"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="16dp"
        android:visibility="gone" />

    <net.iaround.ui.view.HeadPhotoView
        android:id="@+id/icon"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y120"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="9dp" />

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/checkbox"
        android:layout_toLeftOf="@+id/icon"
        android:layout_toStartOf="@+id/icon">
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <include
                android:id="@+id/chat_status_of_sendMs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/x12"
                android:layout_toLeftOf="@id/content"
                layout="@layout/chat_record_status"/>

            <LinearLayout
                android:id="@+id/content_userinfo_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon"
                android:gravity="right"
                android:orientation="vertical" >
                <include
                    layout="@layout/iaround_chat_myself_view" />
                <RelativeLayout
                    android:id="@+id/rl_content"
                    android:layout_width="240dp"
                    android:layout_height="126dp"
                    android:orientation="vertical"
                    android:background="@drawable/chat_new_record_friend_bg"
                    >
                    <!--技能名称和等级-->
                    <LinearLayout
                        android:id="@+id/ll_skill_name_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="9dp"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/tv_skill_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            tools:text="无影脚"
                            android:textColor="@color/chat_update_edit_user_value"
                            android:textSize="15sp"
                            />
                        <net.iaround.ui.view.RatingBarView
                            android:id="@+id/rbv_skill_level"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            app:singelStarSize="13dp"
                            app:paddingSpace="6dp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_skill_left_1">
                        </net.iaround.ui.view.RatingBarView>
                    </LinearLayout>
                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_below="@+id/ll_skill_name_level"
                        android:background="@color/chat_update_divider_of_toolMenu"/>
                    <RelativeLayout
                        android:id="@+id/ll_skill_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/divider">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/fl_skill"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginBottom="14dp"
                            android:orientation="vertical">

                            <net.iaround.ui.comon.RichTextView
                                android:id="@+id/tvDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="false"
                                android:gravity="left"
                                tools:text="你向客服小美使用了无影脚，3分钟内不能进入被踢出的聊吧。"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_skill_effect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                tools:text="对方经验-14，战神+1000"
                                android:textColor="@color/login_btn"
                                android:textSize="12sp"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <FrameLayout
                            android:id="@+id/fl_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="5.1dp"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:id="@+id/iv_skill"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                />
                            <ImageView
                                android:id="@+id/iv_skill_ani"
                                android:layout_width="56dp"
                                android:layout_height="56dp" />
                        </FrameLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_again"
            android:layout_width="86dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            tools:text="再来一次"
            android:background="@drawable/group_info_join_group_btn"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="12sp"/>
    </LinearLayout>

    <include
        android:id="@+id/llStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/ll_content_layout"
        layout="@layout/chat_record_status" />

</RelativeLayout>