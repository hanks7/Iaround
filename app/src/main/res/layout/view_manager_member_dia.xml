<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="279dp"
        android:layout_height="200dp"
        android:background="@drawable/z_common_dialog_bg"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <!--禁言和取消禁言-->
        <RelativeLayout
            android:id="@+id/rl_forbid_and_cancel_forbid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:id="@+id/ll_forbid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkbox_forbid"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/round_check_selector"
                    android:button="@null"
                    android:checked="false"/>
                <TextView
                    android:id="@+id/tv_forbid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    tools:text="禁言24小时"
                    android:text="@string/chatbar_memeber_forbid"
                    android:textColor="@color/chat_update_edit_user_value"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_cancel_forbid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="29dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkbox_cancel_forbid"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/round_check_selector"
                    android:button="@null"
                    android:checked="false"/>
                <TextView
                    android:id="@+id/tv_cancel_forbid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    tools:text="取消禁言"
                    android:text="@string/menu_unforbidden"
                    android:textColor="@color/chat_update_edit_user_value"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <!--设置管理和取消管理-->
        <RelativeLayout
            android:id="@+id/rl_manage_and_cancel_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_forbid_and_cancel_forbid"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/ll_set_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkbox_set_manager"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/round_check_selector"
                    android:button="@null"
                    android:checked="false"/>
                <TextView
                    android:id="@+id/tv_set_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    tools:text="设置管理"
                    android:text="@string/chatbar_set_manager"
                    android:textColor="@color/chat_update_edit_user_value"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_cancel_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="29dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkbox_cancel_manager"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/round_check_selector"
                    android:button="@null"
                    android:checked="false"/>
                <TextView
                    android:id="@+id/tv_cancel_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    tools:text="取消管理"
                    android:text="@string/chatbar_cancel_manager"
                    android:textColor="@color/chat_update_edit_user_value"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <!--踢出聊吧-->
        <RelativeLayout
            android:id="@+id/rl_tick_chatbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_manage_and_cancel_manage"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/ll_tick_chatbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkbox_tick_chatbar"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/round_check_selector"
                    android:button="@null"
                    android:checked="false"/>
                <TextView
                    android:id="@+id/tv_tick_chatbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    tools:text="踢出聊吧"
                    android:text="@string/group_kick_title"
                    android:textColor="@color/chat_update_edit_user_value"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="29dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <CheckBox
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/round_check_selector"
                    android:button="@null"
                    android:checked="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    tools:text="取消禁言"
                    android:textColor="@color/chat_update_edit_user_value"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_below="@+id/rl_tick_chatbar"
            android:layout_marginTop="22dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="取消"
                android:text="@string/dialog_cancel"
                android:textColor="@color/chat_update_edit_user_value"
                android:textSize="15sp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E6E6E6"/>
            <Button
                android:id="@+id/btn_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="确定"
                android:text="@string/ok"
                android:textColor="@color/login_btn"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>