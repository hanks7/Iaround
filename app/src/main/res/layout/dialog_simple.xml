<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_window_bg">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y59"
        android:textColor="@color/chat_update_edit_user_value"
        android:textSize="@dimen/y60" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/dialog_divider"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginRight="@dimen/x70"
        android:layout_marginTop="@dimen/y60"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/title_text"
        android:textSize="@dimen/y52" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@drawable/dialog_divider"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dialog_content"
        android:layout_marginBottom="@dimen/y70"
        android:layout_marginRight="@dimen/x70"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginTop="@dimen/y86"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_positive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_ok_btn_bg"
            android:text="@string/pay_alipay_Ensure"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/y52" />

        <TextView
            android:id="@+id/dialog_negative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x60"
            android:text="@string/dialog_cancel"
            android:background="@drawable/selector_round_rectangle_bg"
            android:textColor="@drawable/selector_text_red_white_bg"
            android:textSize="@dimen/y52" />
    </LinearLayout>

</RelativeLayout>
