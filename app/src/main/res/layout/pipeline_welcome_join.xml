<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/ll_pipeline_welcome"
        android:layout_width="172dp"
        android:layout_height="30dp"
        android:background="@drawable/gradient_welcome_boy_bg">
        <net.iaround.ui.view.HeadPhotoView
            android:id="@+id/iv_chat_bar_welcome_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_chat_bar_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/title_bar_bg"
            android:textSize="10sp"
            android:layout_marginRight="6dp"
            android:text="谁是大英雄"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/title_bar_bg"
            android:textSize="10sp"
            android:text="来了"/>


    </LinearLayout>


</LinearLayout>