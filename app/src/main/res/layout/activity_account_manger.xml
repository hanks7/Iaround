<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y173"
        android:layout_marginTop="@dimen/y36"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x48"
            android:layout_weight="1"
            android:text="@string/account_num"
            android:textColor="@color/edit_user_value"
            android:textSize="@dimen/y42" />

        <TextView
            android:id="@+id/tv_account_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x48"
            android:textColor="@color/edit_user_key"
            android:textSize="@dimen/y42" />

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x48"
            android:src="@drawable/user_detail" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_registration_way"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y173"
        android:background="@color/common_white"
        android:gravity="center_vertical"
