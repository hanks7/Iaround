<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <!--     <ImageView -->
    <!--         android:id="@+id/imageView1" -->
    <!--         android:layout_width="wrap_content" -->
    <!--         android:layout_height="wrap_content" -->
    <!--         android:layout_marginBottom="20dp" -->
    <!--         android:layout_marginTop="20dp" -->
    <!--         android:src="@drawable/bind_account_cat_1" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/mobile_phone_number_has_been_bound"
            android:textColor="#333333"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tvPhone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone_authen_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y204"
        android:layout_marginTop="@dimen/y60"
        android:background="#F2F2F2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/y120"
            android:layout_marginLeft="@dimen/x57"
            android:src="@drawable/phone_authen" />

        <LinearLayout
            android:id="@+id/ll_user_phone_authen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y120"
            android:layout_marginLeft="@dimen/x36"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/y42" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/telphone_number_login_retrieve_password"
        android:textColor="#999999"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_phone_authen_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x72"
        android:layout_marginRight="@dimen/x72"
        android:layout_marginTop="@dimen/y41"
        android:gravity="center"
        android:text="@string/authen_phone_suc_tips"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/y36" />


    <Button
        android:id="@+id/replace_telphone1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="34dp"
        android:background="@drawable/z_btn_red_selector"
        android:text="@string/space_bind_mobile_desc2"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/replace_telphone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y124"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y43"
        android:background="@drawable/btn_takepic_selector"
        android:gravity="center"
        android:text="@string/authen_phone_change_phoennum"
        android:textColor="@color/common_white"
        android:textSize="@dimen/y42" />


</LinearLayout>