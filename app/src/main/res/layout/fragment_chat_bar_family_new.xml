<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_chat_bar_icon_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/default_avatar_rect_light" />

    <LinearLayout
        android:id="@+id/ll_chat_bar_hot_hour_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:background="@drawable/chat_bar_hot_hour"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_chat_bar_hot_hour_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="@string/chat_bar_hot_hour"
            android:textColor="@color/title_bar_bg"
            android:textSize="10sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_chat_bar_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="刚好遇见你"
            android:textColor="@color/title_bar_bg"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_chat_bar_hot_family_left"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_below="@id/tv_chat_bar_name_left"
            android:background="@drawable/chat_bar_family_hot_new"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_chat_bar_wave"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/chatbar_zoom_wave"
                android:layout_gravity="center_vertical"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_chat_bar_hot_family_left"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:text="12334"
                android:textColor="@color/title_bar_bg"
                android:textSize="10sp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>