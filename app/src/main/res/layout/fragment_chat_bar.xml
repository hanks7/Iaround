<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/common_white">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/chat_bar_xTablayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_create_chat_bar"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/y46"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/create_chat_bar_icon"
            android:layout_marginRight="17dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/chat_bar_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
