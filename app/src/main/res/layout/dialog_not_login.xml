<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_not_login"
    android:padding="@dimen/x70">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/edit_user_value"
            android:textSize="@dimen/y60"/>

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dialog_title"
            android:layout_marginTop="@dimen/y60"
            android:textColor="@color/action_title_color"
            android:textSize="@dimen/y52"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dialog_content"
            android:layout_marginTop="@dimen/y86"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_not_login_cacel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_btn"
                android:textSize="@dimen/y52"/>

            <TextView
                android:id="@+id/tv_not_login_quick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x60"
                android:textColor="@color/login_btn"
                android:textSize="@dimen/y52"/>
        </LinearLayout>

</RelativeLayout>