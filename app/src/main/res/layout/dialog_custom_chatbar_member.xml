<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="545dp"
    android:background="@color/transparent">
    <RelativeLayout
        android:layout_width="332dp"
        android:layout_height="545dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_chat_bar_member_dialog">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/chat_bar_online"
                android:textSize="16dp"
                android:textColor="@color/chat_update_edit_user_value"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/close_user_list_dialog_icon"/>
        </RelativeLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_title"
            android:background="@color/chat_update_divider_of_messageItem"/>
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lv_chatbar_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:layout_below="@+id/divider"
            />
    </RelativeLayout>

</RelativeLayout>