<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/userFragment_bg"
    xmlns:tools="http://schemas.android.com/tools">

    <!--<View-->
        <!--android:id="@+id/divider"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/y36"-->
        <!--/>-->

    <RelativeLayout
        style="@style/wfill_hwrap"
        android:layout_below="@id/divider"
        android:background="@color/common_white"
        android:layout_marginBottom="@dimen/y36"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            tools:background="@drawable/default_avatar_round"/>

        <TextView
            android:id="@+id/text_name"
            android:textColor="#323232"
            android:textSize="16dp"
            android:singleLine="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_logo"
            android:layout_toRightOf="@id/img_logo"
            tools:text="QQ音乐"/>

        <TextView
            android:id="@+id/text_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/img_logo"
            android:text="@string/thrid_ad_tip"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="@drawable/z_common_ad_bg"/>

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/text_ad"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="中国新歌声 第三期"
            android:textColor="#999999"
            android:textSize="13dp"/>

        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/img_logo"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:minHeight="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thrid_ad_pic"/>

        <LinearLayout
            android:id="@+id/ly_poster"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/img_logo"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:minHeight="120dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/btn_download"
            android:singleLine="true"
            android:text="@string/common_ad_install"
            android:textColor="#999999"
            android:textSize="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/z_selector_postbar_grey_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"/>

    </RelativeLayout>


</RelativeLayout>




