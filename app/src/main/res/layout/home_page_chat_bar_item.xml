<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_chat_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:id="@+id/rl_chat_bar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_chat_bar_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar_rect_light" />

            <LinearLayout
                android:id="@+id/ll_chat_bar_hot_family"
                android:layout_width="50dp"
                android:layout_height="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/chat_bar_family_hot_new"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_chat_bar_wave"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/chat_bar_item_icon_hot"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_chat_bar_hot_family"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/title_bar_bg"
                    android:textSize="10sp" />

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_chat_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="你好吗"
        android:textColor="@color/common_black"
        android:textSize="14sp" />

</LinearLayout>