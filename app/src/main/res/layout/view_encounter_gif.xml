<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/y378"
    android:paddingTop="@dimen/y44"
    android:paddingLeft="@dimen/y36"
    android:paddingRight="@dimen/y36"
    android:background="@color/common_white">
    
    <LinearLayout
        android:id="@+id/ly_encounter_base_gif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y46"
            android:layout_marginRight="@dimen/x14"
            android:layout_gravity="center_vertical"
            android:src="@drawable/encounter_base_info_gift"/>

        <TextView
            android:id="@+id/tv_encounter_base_gif_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_black"
            android:textSize="@dimen/y42"
            android:text="@string/encounter_base_info_headline"/>
    </LinearLayout>
    
    <View
        android:id="@+id/line"
        android:layout_width="@dimen/x6"
        android:layout_height="@dimen/y261"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginTop="@dimen/y17"
        android:layout_marginBottom="@dimen/y18"
        android:layout_below="@id/ly_encounter_base_gif_title"
        android:background="@color/login_btn_select"/>


    <ImageView
        android:id="@+id/iv_encounter_base_info_gift"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/y180"
        android:layout_toRightOf="@id/line"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginTop="@dimen/y48"
        android:layout_below="@id/ly_encounter_base_gif_title"
        android:src="@drawable/encounter_gift"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x48"
        android:layout_marginTop="@dimen/y150"
        android:layout_toRightOf="@id/iv_encounter_base_info_gift"
        android:textSize="@dimen/y42"
        android:textColor="@color/encounter_base_info_gif"
        android:text="@string/encounter_base_info_handsel"/>

</RelativeLayout>