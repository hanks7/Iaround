<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.iaround.ui.view.HeadPhotoView
            android:id="@+id/income_details_user_icon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="17dp">

            <TextView
                android:id="@+id/income_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/ly_user_age_left"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y42"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/income_details_name"
                android:gravity="center"
                android:layout_alignLeft="@+id/user_name"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_user_sex_left"
                    android:layout_width="@dimen/x34"
                    android:layout_height="@dimen/y42"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_user_age_left"
                    android:layout_width="@dimen/x36"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x15"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/y30"
                    android:textColor="@color/common_white"/>

            </LinearLayout>


            <TextView
                android:id="@+id/income_details_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/income_details_name"
                android:layout_marginTop="10dp"
                android:textColor="#222222"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/income_details_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="7dp"
                android:layout_below="@id/income_details_name"
                android:layout_toRightOf="@id/income_details_account"
                android:textColor="#999999"
                android:textSize="12sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:id="@+id/income_details_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/income_details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_below="@id/income_details_type"
                android:textColor="#999999"
                android:textSize="12sp"/>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/linearLayout"
        android:background="#E6E6E6" />

</RelativeLayout>