<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="14dp">

    <ImageView
        android:id="@+id/skill_icon"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_come_soon"
        app:layout_heightPercent="81.6%w"
        app:layout_widthPercent="81.6%w" />


    <net.iaround.ui.view.RatingBarView
        android:id="@+id/ratingBarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_marginTopPercent="1.59%w"
        app:paddingSpace="3dp"
        app:singelStarSize="13dp" />
</com.zhy.android.percent.support.PercentLinearLayout>