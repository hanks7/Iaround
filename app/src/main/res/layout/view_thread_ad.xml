<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="@dimen/x20"
    android:paddingLeft="@dimen/x35"
    android:paddingRight="@dimen/x35"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_thread_ad_icon"
        android:layout_width="@dimen/x156"
        android:layout_height="@dimen/y156"/>

    <TextView
        android:id="@+id/tv_thread_ad_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:textColor="@color/hint_text_color"
        android:textSize="@dimen/y36"/>

</LinearLayout>