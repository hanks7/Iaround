<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_skill_left_1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_skill_left_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/iv_skill_left_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/chat_bar_family_join"
                    />
                <ImageView
                    android:id="@+id/iv_skill_ani_left1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <net.iaround.ui.view.RatingBarView
                android:id="@+id/rbv_skill_left_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:singelStarSize="13dp"
                app:paddingSpace="6dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fl_skill_left_1">
            </net.iaround.ui.view.RatingBarView>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_skill_right_1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            >
            <FrameLayout
                android:id="@+id/fl_skill_right_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/iv_skill_right_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/chat_bar_family_join"
                    />
                <ImageView
                    android:id="@+id/iv_skill_ani_right1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <net.iaround.ui.view.RatingBarView
                android:id="@+id/rbv_skill_right_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/fl_skill_right_1"
                android:orientation="horizontal"
                app:singelStarSize="13dp"
                app:paddingSpace="6dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true">
            </net.iaround.ui.view.RatingBarView>
        </RelativeLayout>
    </LinearLayout>
