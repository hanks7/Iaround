<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

	<TextView
	    android:id="@+id/dialog_title"
	    style="@style/dialog_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_margin="15dip"
	    android:text="标题"
	    android:visibility="gone" />

	<ImageView android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:background="@drawable/dialog_divider"
	    android:layout_marginLeft="15dip"
	    android:layout_marginRight="15dip" />

	<!--<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="90dp">-->
	    
	    <TextView
	        android:id="@+id/dialog_content"
	        style="@style/dialog_content"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginBottom="20dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:layout_marginTop="20dip"
	        android:gravity="left|center"
	        android:text="这里是dialog的文本内容"
	        android:textColor="#666666" />
	    
	<!--</LinearLayout>-->
	

	<ImageView android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="@drawable/dialog_divider" />
	
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:orientation="horizontal">

	    <TextView
	        android:id="@+id/dialog_positive"
	        android:layout_width="0dip"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="确定"
	        android:textSize="15dp" 
	        android:textColor="@drawable/z_selector_dynamic_filter_text"/>

	    <ImageView
	        android:id="@+id/dialog_btn_devider"
	        android:layout_width="1dip"
		    android:layout_height="fill_parent"
		    android:background="@drawable/dialog_divider" />

	    <TextView
	        android:id="@+id/dialog_negative"
	        android:layout_width="0dip"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:text="取消"
	        android:textSize="15dp"
	        android:textColor="@drawable/z_selector_dynamic_filter_text" />

	     <!--  android:textStyle="bold"去掉粗体显示2014/4/27 -->
	</LinearLayout>

</LinearLayout>
