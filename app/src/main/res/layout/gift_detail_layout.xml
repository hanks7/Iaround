<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_gift_layout"
    android:layout_width="94dp"
    android:layout_height="94dp">
    <View
    android:id="@+id/chatbar_select_gift_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@color/chatbar_gift_select_bg"
    android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_gift_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_have_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatbar_gift_have_num_bg"
            android:textSize="9sp"
            android:textColor="#553F3F"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_img"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/common_white"
        android:textSize="9sp"/>
    <TextView
        android:id="@+id/tv_gift_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gift_name"
        android:layout_centerHorizontal="true"
        android:textSize="8sp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/chatbar_gift_price_color"/>
    <View
        android:id="@+id/chatbar_select_gift_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/chatbar_select_gift_bg"/>
</RelativeLayout>