<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlbackgroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/custom_chat_bar_dialog">
        <TextView
            android:id="@+id/tv_report"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            tools:text="举报"
            android:text="@string/chat_setting_report"
            android:textSize="12sp"
            android:textColor="@color/chat_update_gray_text_color"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            tools:text="我有点醉"
            android:textSize="14sp"
            android:textColor="@color/chat_update_edit_user_value"
            />
        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvName"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rlAgeSex"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/ivSex"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/ivSex"
                    android:textSize="10sp"
                    android:textColor="@color/common_white"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tvConstellation"
                android:layout_width="38dp"
                android:layout_height="14dp"
                android:textColor="@color/common_white"
                android:gravity="center"
                tools:text="双鱼座"
                android:textSize="10sp"
                android:background="@drawable/encounter_constellation_circel_bg"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/encounter_level_circel_bg"
                tools:text="LV.30"
                android:textColor="@color/common_white"
                android:textSize="10sp"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSign"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_user_info"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:maxLines="2"
            tools:text="你说，我在等一个语言，却永远啊不能实现"
            android:ellipsize="end"
            android:textColor="@color/chat_update_gray_text_color"
            android:textSize="12sp"/>

        <!--富豪榜，魅力榜排名区域-->
        <RelativeLayout
            android:id="@+id/rl_regal_charm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSign"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp">
            <LinearLayout
                android:id="@+id/ll_regal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="52dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_regal"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    tools:text="富豪榜"
                    android:text="@string/chatbar_userinfo_regal"
                    android:textColor="@color/common_white"
                    android:textSize="12sp"
                    android:background="@drawable/chatbar_userinfo_regal_bg"
                    />
                <TextView
                    android:id="@+id/tv_regal_level"
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="5dp"
                    tools:text="No.1"
                    android:text="@string/chatbar_userinfo_regal"
                    android:textColor="#4791ff"
                    android:textSize="12sp"
                    android:background="@drawable/chatbar_userinfo_regal_level_bg"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_charm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="52dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_charm"
                    android:layout_width="48dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    tools:text="魅力榜"
                    android:text="@string/chatbar_userinfo_charm"
                    android:textColor="@color/common_white"
                    android:textSize="12sp"
                    android:background="@drawable/chatbar_userinfo_charm_bg"
                    />
                <TextView
                    android:id="@+id/tv_charm_level"
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="5dp"
                    tools:text="暂无排名"
                    android:text="@string/chatbar_userinfo_regal"
                    android:textColor="#ff66a3"
                    android:textSize="12sp"
                    android:background="@drawable/chatbar_userinfo_charm_level_bg"
                    />
            </LinearLayout>
        </RelativeLayout>
        
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/rl_regal_charm"
            android:background="#ebebeb"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            layout="@layout/skill_level_layout"/>
        <!--送礼，关注，技能，上麦，禁言按钮区域-->
        <LinearLayout
            android:id="@+id/ll_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <!--关注-->
            <LinearLayout
                android:id="@+id/ll_btn_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/iv_relationship_status"
                    android:layout_width="39dp"
                    android:layout_height="36dp" />
                <TextView
                    android:id="@+id/tv_relationship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    tools:text="关注"
                    android:textSize="12sp"
                    android:textColor="@color/title_text"/>
            </LinearLayout>
            <!--送礼-->
            <LinearLayout
                android:id="@+id/ll_btn_send_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:orientation="vertical"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/iv_send_gift"
                    android:layout_width="39dp"
                    android:layout_height="36dp" />
                <TextView
                    android:id="@+id/tv_send_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    tools:text="送礼"
                    android:textSize="12sp"
                    android:textColor="@color/title_text"/>
            </LinearLayout>
            <!--技能-->
            <LinearLayout
                android:id="@+id/ll_btn_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:orientation="vertical"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/iv_skill"
                    android:layout_width="39dp"
                    android:layout_height="36dp"
                    />
                <TextView
                    android:id="@+id/tv_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    tools:text="技能"
                    android:text="@string/chatbar_userinfo_skil"
                    android:textSize="12sp"
                    android:textColor="@color/title_text"/>
            </LinearLayout>
            <!--上下麦-->
            <LinearLayout
                android:id="@+id/ll_btn_on_wheat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:orientation="vertical"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/iv_wheat_icon"
                    android:layout_width="39dp"
                    android:layout_height="36dp"
                    />
                <TextView
                    android:id="@+id/tv_down_wheat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    tools:text="上麦"
                    android:textSize="12sp"
                    android:textColor="@color/title_text"/>
            </LinearLayout>
            <!--禁言-->
            <LinearLayout
                android:id="@+id/ll_btn_forbid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:orientation="vertical"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/iv_forbid_icon"
                    android:layout_width="39dp"
                    android:layout_height="36dp" />
                <TextView
                    android:id="@+id/tv_forbid_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    tools:text="禁言"
                    android:textSize="12sp"
                    android:textColor="@color/title_text"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="284dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_custom_bg1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_chatbar_headicon_bg"
            />
        <ImageView
            android:id="@+id/iv_custom_bg2"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_chatbar_headicon_bg"/>
        <net.iaround.ui.view.HeadPhotoView
            android:id="@+id/user_icon"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true"
            android:visibility="visible"/>
    </RelativeLayout>
