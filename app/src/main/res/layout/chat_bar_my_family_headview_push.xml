<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:background="@color/chat_bar_family_push">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/iv_chat_bar_family_join"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/chat_bar_family_push" />

            <TextView
                android:id="@+id/tv_chat_bar_family_my_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/iv_chat_bar_family_join"
                android:text="@string/chat_bar_family_join"
                android:textColor="@color/chat_update_gray_text_color" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>