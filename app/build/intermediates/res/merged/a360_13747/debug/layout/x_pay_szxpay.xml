<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/all_backgroud_color">

    <include
        android:id="@+id/activity_title"
        layout="@layout/tabar_actionbar_layout" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    
                    style="@style/double_wrap"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:text="@string/pay_szf_good_name"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/good_name"
                    android:layout_width="fill_parent"
                    android:layout_height="115dp"
                    android:gravity="center"
                    android:text="aaaaa=bbbbbbbb"
                    android:textColor="#333333"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/type_mobile"
                        android:layout_width="100dp"
                        android:layout_height="43dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/z_pay_szf_selector"
                        android:layout_weight="1"
                        
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/z_pay_mobie"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:text="中国移动"
                            android:textColor="#333333"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/type_unicom"
                        android:layout_width="100dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/z_pay_szf_selector"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/z_pay_unicom"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:text="中国联通"
                            android:textColor="#333333"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/type_telecom"
                        android:layout_width="100dp"
                        android:layout_height="43dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/z_pay_szf_selector"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/z_pay_telecom"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:text="中国电信"
                            
                            android:textColor="#333333"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/et_szx_card"
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        android:background="@drawable/z_common_button_round_bg_white"
                        android:hint="@string/szx_des1"
                        android:inputType="number"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/et_szx_pass"
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        android:background="@drawable/z_common_button_round_bg_white"
                        android:hint="@string/szx_des2"
                        android:inputType="number"
                        android:singleLine="true" />
                </LinearLayout>

               
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    
     <Button
         android:id="@+id/btn_submit"
         android:layout_width="fill_parent"
         android:layout_height="48dp"
         android:layout_marginLeft="34dp"
         android:layout_marginRight="34dp"
         android:layout_marginTop="25dp"
         android:background="@drawable/z_btn_red_selector"
         android:text="@string/next"
         android:textColor="@color/white"
         android:textSize="18sp" />

</LinearLayout>