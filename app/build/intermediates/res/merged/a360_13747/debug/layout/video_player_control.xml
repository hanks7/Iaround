<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:background="@drawable/chat_video_recorder_cancel_button_status" />

    <LinearLayout
        android:id="@+id/loading"
        style="@style/double_wrap"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp" />

        <TextView
            style="@style/double_wrap"
            android:text="@string/show_picture_loading" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/playControl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="30dp" >

        <Button
            android:id="@+id/play"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:background="@drawable/transparent"
            android:text="@string/chat_audio_recorder_play"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="00:00"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/stop"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/transparent"
            android:padding="5dp"
            android:text="@string/chat_video_record_preview_stop"
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:id="@+id/top_backgroup"
        android:layout_width="fill_parent"
        android:layout_height="88dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/chat_video_recorder_top_bg" />

    <View
        android:id="@+id/bottom_backgroup"
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/chat_video_recorder_bottom_bg" />

</RelativeLayout>