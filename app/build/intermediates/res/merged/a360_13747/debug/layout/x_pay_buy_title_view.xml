<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/content_ly"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:background="@drawable/z_common_title_bg" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="48dip" >

            <ImageView
                android:id="@+id/title_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:paddingRight="35dp"
                android:src="@drawable/title_back_selector" />

            <TextView
                android:id="@+id/title_right_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dip"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="5dip"
                android:singleLine="true"
                android:text="@string/pay_main_right_title"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="钻石充值"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/balance_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            android:paddingLeft="20dp"
             >

            <ImageView
                android:id="@+id/balance_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/z_pay_buy_dgold_icon" />

            <TextView
                android:id="@+id/balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/balance_icon"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:text="金币余额："
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/balance_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/balance_ly"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:text="50000"
            android:textColor="#ffffff"
            android:textSize="38dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/foot_text"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_below="@+id/content_ly"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:text="兑换金币"
        android:textColor="#999999"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e3e3e3"
        android:layout_below="@+id/foot_text" />

</RelativeLayout>