<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/y38"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x48"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/y48"
            android:layout_marginRight="@dimen/x42"
            android:src="@drawable/dynamic_details_love"/>

        <LinearLayout
            android:id="@+id/ly_head_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/tv_details_love_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/y36"/>

    </LinearLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginTop="@dimen/y38"
        android:background="@color/encounter_base_info_line"/>

    <LinearLayout
        android:id="@+id/ly_dynamic_details_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x48"
        android:layout_marginTop="@dimen/y38"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/y33"
            android:src="@drawable/dynamic_details_comment"/>

        <TextView
            android:id="@+id/tv_dynamic_details_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:textSize="@dimen/y36"
            android:textColor="@color/hint_text_color"/>
    </LinearLayout>

</LinearLayout>