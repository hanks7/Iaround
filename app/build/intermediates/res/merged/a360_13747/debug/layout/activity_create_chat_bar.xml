<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userFragment_bg"
    tools:context="net.iaround.ui.activity.CreateChatBarActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"/>
    <RelativeLayout
        android:id="@+id/rl_select_icon"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/title_bar"
        android:background="@color/userFragment_bg">
        <ImageView
            android:id="@+id/iv_selected_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/create_chatbar_icon"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_charbar_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_select_icon"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/common_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/create_chatbar_edit_chatbarname_title"
            android:textSize="14sp"
            android:textColor="@color/chat_update_gray_text_color"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_charbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/chat_update_edit_user_value"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16dp"
            android:src="@drawable/arraw_turn" />
    </LinearLayout>
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/ll_charbar_name"
        android:background="@color/chat_update_divider_of_messageItem"/>
    <LinearLayout
        android:id="@+id/ll_charbar_position"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/divider1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/common_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/create_chatbar_selectcenter_title"
            android:textSize="14sp"
            android:textColor="@color/chat_update_gray_text_color"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_charbar_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:textColor="@color/chat_update_edit_user_value"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16dp"
            android:src="@drawable/arraw_turn"
            android:visibility="gone"/>
    </LinearLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/ll_charbar_position"
        android:background="@color/chat_update_divider_of_messageItem"/>
    <RelativeLayout
        android:id="@+id/ll_chatbar_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"
        android:background="@color/common_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:text="@string/create_chatbar_edit_chatbarcontent_title"
            android:textSize="14sp"
            android:textColor="@color/chat_update_gray_text_color"/>
        <TextView
            android:id="@+id/tv_chatbar_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:textColor="@color/chat_update_edit_user_value"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/arraw_turn" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_createbar_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_chatbar_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="22dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_chatbar_hint1"
            android:textSize="12sp"
            android:textColor="@color/group_create_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/create_chatbar_hint2"
            android:textColor="@color/group_create_bg"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/create_chatbar_hint3"
            android:textColor="@color/group_create_bg"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_create_chatbar"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/ll_createbar_comment"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:text="@string/create_chatbar_commit"
        android:textColor="@color/common_white"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/create_group_submit_btn_bg"/>
</RelativeLayout>
