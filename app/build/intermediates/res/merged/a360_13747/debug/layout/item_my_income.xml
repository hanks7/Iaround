<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/y51"
    android:paddingBottom="@dimen/y54"
    android:background="@color/common_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_my_income_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/y39"
        android:textColor="@color/hot_list_city_cl"/>

    <TextView
        android:id="@+id/tv_item_my_income_payment_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/y39"
        android:textColor="@color/hot_list_city_cl"/>

    <TextView
        android:id="@+id/tv_item_my_income_payment_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/y39"
        android:textColor="@color/hot_list_city_cl"/>
</LinearLayout>
