<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlContent"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_black" >

    <include
        android:id="@+id/actionBar"
        layout="@layout/title_bar" />

    <FrameLayout
        android:id="@+id/flDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionBar" >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rlFunction"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_white"
        android:clickable="true" >

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="选择"
            android:textColor="@color/chat_update_message_count"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tvCount"
            android:button="@drawable/radio_btn"
            android:focusable="false" />
    </RelativeLayout>

</RelativeLayout>