<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y168"
    android:background="@color/main_bg_color">

    <LinearLayout
        android:id="@+id/template_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/x64"
        android:paddingLeft="@dimen/x64"
        android:paddingTop="@dimen/y51"
        android:paddingBottom="@dimen/y51"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/y50"
            android:layout_gravity="center_vertical"
            android:src="@drawable/title_back_selector"/>

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/login_btn"
            android:textSize="@dimen/y42"/>

    </LinearLayout>

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/y50"
        android:maxLength="12"
        android:singleLine="true"
        android:textColor="@color/common_black"/>

    <LinearLayout
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x64"
        android:paddingRight="@dimen/x64"
        android:paddingTop="@dimen/y51"
        android:paddingBottom="@dimen/y51"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/y48"/>

        <TextView
            android:id="@+id/txt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/y50"
            android:textColor="@color/login_btn"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>