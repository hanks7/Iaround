<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_actionbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y168"
    android:background="@color/common_white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fl_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/x60">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="@dimen/x28"
                    android:layout_height="@dimen/y50"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x64"
                    android:src="@drawable/title_back" />

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y55"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/fl_left"
                android:layout_marginLeft="5dp"
                android:textColor="@color/title_text"
                android:gravity="center_vertical"
                android:textSize="@dimen/y50"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

        </RelativeLayout>

    <LinearLayout
        android:id="@+id/fl_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/y47"
            android:layout_marginRight="@dimen/x51"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x64"
            android:textColor="@color/title_text"
            android:textSize="@dimen/y50"
            android:visibility="gone"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</RelativeLayout>