<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_login_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/iv_start_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/login_bg" />

    <LinearLayout
        android:id="@+id/llloading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="95dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/inmobi_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginBottom="95dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/splashId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="95dp"
        android:scaleType="fitCenter" />

    <!--广告-->
    <LinearLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/splashId1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter" />


        <ImageView
            android:id="@+id/login_bottom1"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/login_bottom"
            android:scaleType="centerInside"
            android:visibility="gone" />

    </LinearLayout>

    <!--跳过按钮-->
    <TextView
        android:id="@+id/start_relogin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/skip_ad_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:text="@string/start_skip_advertise"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <!--logo-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_bottom" />


</RelativeLayout>