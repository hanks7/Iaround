<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="@drawable/z_common_title_bg"  >
    
    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:scaleType="center"
        android:src="@drawable/default_avatar_round_light" />
    
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:drawableLeft="@drawable/z_near_down_triangle_img"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="5dip"
        android:singleLine="true"
        android:text="title"
        android:textColor="@color/white"
        android:textSize="17sp" />
    
    <ImageView
        android:id="@+id/title_right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="15dip"
        android:paddingRight="5dp"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"        
        android:ellipsize="end"
        android:gravity="center"
        
        android:singleLine="true"
        android:src="@drawable/z_near_search_img"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>
