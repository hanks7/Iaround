<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ll_common_icon"
        android:layout_width="@dimen/y192"
        android:layout_height="@dimen/y192"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y90"
        android:src="@drawable/icon_about" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y42"
        android:text="@string/app_name"
        android:textColor="#222222"
        android:textSize="@dimen/y42" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y90"
        android:background="@color/common_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_common_question"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x48"
                android:layout_weight="1"
                android:text="@string/setting_about_comment_question"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y42"
                android:layout_marginRight="@dimen/x48"
                android:src="@drawable/user_detail" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginLeft="@dimen/x45"
            android:background="#EBEBEB" />

        <LinearLayout
            android:id="@+id/ll_contact_our"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x48"
                android:layout_weight="1"
                android:text="@string/setting_about_connect_our"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y42"
                android:layout_marginRight="@dimen/x48"
                android:src="@drawable/user_detail" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginLeft="@dimen/x45"
            android:background="#EBEBEB" />

        <LinearLayout
            android:id="@+id/ll_agreement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x48"
                android:layout_weight="1"
                android:text="@string/about_agreement"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y42"
                android:layout_marginRight="@dimen/x48"
                android:src="@drawable/user_detail" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginLeft="@dimen/x45"
            android:background="#EBEBEB" />

        <LinearLayout
            android:id="@+id/ll_welcome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x48"
                android:layout_weight="1"
                android:text="@string/setting_about_welcome"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y42"
                android:layout_marginRight="@dimen/x48"
                android:src="@drawable/user_detail" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
