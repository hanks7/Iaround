<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_head_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@drawable/z_common_man_avater_round" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:lines="1"
                android:maxWidth="140dp"
                android:textColor="@color/common_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_name"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="6dp"
                android:text="07月11日 16:00 1小时 10元"
                android:textColor="@color/c_999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_time_price"
                android:layout_below="@+id/tv_time_price"
                android:layout_marginTop="6dp"
                android:text="待支付"
                android:textColor="@color/c_999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_judge"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:background="@drawable/selector_round_rectangle_bg"
                android:gravity="center"
                android:text="@string/judge"
                android:textColor="@drawable/selector_text_red_white_bg"
                android:textSize="12sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_more_list"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_round_rectangle_bg"
                android:gravity="center"
                android:text="@string/one_more_list"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/margin_right"
                android:textColor="@drawable/selector_text_red_white_bg"
                android:textSize="12sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_to_pay"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_round_rectangle_bg"
                android:gravity="center"
                android:text="@string/one_more_list"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/margin_right"
                android:textColor="@drawable/selector_text_red_white_bg"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:background="@color/line_color" />
</RelativeLayout>