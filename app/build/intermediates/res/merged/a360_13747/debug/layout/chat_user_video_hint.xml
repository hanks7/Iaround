<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wfill_hwrap"
    android:orientation="vertical">

    <!--用户是主播提示布局-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/chat_update_divider_of_messageItem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y147"
        android:background="@color/common_white"
        android:orientation="horizontal">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/user_video_hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:text="@string/chat_user_video_authentication"
                    android:ellipsize="end"
                    android:textColor="@color/edit_user_value"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/chat_user_video_invitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/user_video_hint_text"
                    android:gravity="left"
                    android:text="@string/chat_user_video_invitation"
                    android:ellipsize="end"
                    android:textColor="@color/chat_personal_msg_tag_text_read"
                    android:textSize="12sp"
                    android:lines="1"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/user_group_hint_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/user_group_hint_close"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:text="@string/chat_user_video_go"
                android:background="@drawable/video_details_private_chat_round"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

            <Button
                android:id="@+id/user_video_hint_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_close_skill"
                android:visibility="visible" />

    </LinearLayout>


</LinearLayout>