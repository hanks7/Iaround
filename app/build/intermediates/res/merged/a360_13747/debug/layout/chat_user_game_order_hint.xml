<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:orientation="vertical">

    <!--游戏订单提示布局-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/chat_update_divider_of_messageItem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/common_black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_apply_refund"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:background="@drawable/selector_round_rectangle_bg"
                android:gravity="center"
                android:text="@string/apply_refund"
                android:textColor="@drawable/selector_text_red_white_bg"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_order_complete"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/selector_round_rectangle_bg"
                android:gravity="center"
                android:text="@string/complete"
                android:textColor="@drawable/selector_text_red_white_bg"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_order_start_service"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/selector_round_rectangle_bg"
                android:gravity="center"
                android:text="@string/start_order_service"
                android:textColor="@drawable/selector_text_red_white_bg"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_unconfirmed"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:translationZ="1dp"
                android:src="@drawable/order_status_true" />

            <View
                android:id="@+id/view_not_service"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_weight="1"
                android:background="@color/c_999999" />

            <ImageView
                android:id="@+id/iv_not_service"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:translationZ="1dp"
                android:src="@drawable/order_status_false" />

            <View
                android:id="@+id/view_in_the_service"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_weight="1"
                android:background="@color/c_999999" />

            <ImageView
                android:id="@+id/iv_in_the_service"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/order_status_false"
                android:translationZ="1dp" />

            <View
                android:id="@+id/view_complete"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_weight="1"
                android:background="@color/c_999999" />

            <ImageView
                android:id="@+id/iv_complete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/order_status_false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unconfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="@string/order_unconfirmed"
                android:textColor="@color/common_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_not_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/order_not_service"
                android:textColor="@color/c_999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_in_the_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/order_in_the_service"
                android:textColor="@color/c_999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/complete"
                android:textColor="@color/c_999999"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>