<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y112"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y90"
        android:background="@drawable/circle_corner_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/y48"
            android:layout_height="@dimen/y48"
            android:layout_marginLeft="@dimen/x55"
            android:src="@drawable/input_pwd" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x9"
            android:background="@null"
            android:hint="请输入遇见密码"
            android:inputType="textPassword"
            android:textColor="@color/edit_user_value"
            android:textColorHint="#EBEBEB"
            android:textSize="@dimen/y42" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y124"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y44"
        android:background="@drawable/btn_takepic_selector"
        android:gravity="center"
        android:text="@string/authen_phone_next"
        android:textColor="@color/common_white"
        android:textSize="@dimen/y42" />

</LinearLayout>
