<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_video_chat_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<SurfaceView-->
            <!--android:id="@+id/sv_video_chat_small"-->
            <!--android:layout_width="88dp"-->
            <!--android:layout_height="133dp"-->
            <!--android:layout_marginTop="89dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:visibility="visible" />-->

        <!--<SurfaceView-->
            <!--android:id="@+id/sv_video_chat_big"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:visibility="visible" />-->
        <!--<View-->
                <!--android:id="@+id/v_vc_before_call_caller_bg"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/black"-->
                <!--android:alpha="0.8"-->
        <!--</View>-->
    </RelativeLayout>

    <!--接通后的对方的头像和地址及关注-->
    <RelativeLayout
        android:id="@+id/rl_vc_called_user_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@drawable/video_chat_user_info_round">
        <net.iaround.ui.view.HeadPhotoView
            android:id="@+id/hv_vc_called_user_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"/>
        <RelativeLayout
            android:id="@+id/rl_vc_called_user_detail_name_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hv_vc_called_user_icon">
            <TextView
                android:id="@+id/tv_vc_called_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:maxWidth="70dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/white"
                android:singleLine="true"
                android:minLines="1"/>

            <ImageView
                android:id="@+id/iv_vc_called_user_address"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_below="@id/tv_vc_called_user_name"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="7dp"
                android:drawablePadding="6dp"
                android:src="@drawable/video_details_address"/>

            <TextView
                android:id="@+id/tv_vc_called_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_vc_called_user_address"
                android:layout_below="@id/tv_vc_called_user_name"
                android:maxWidth="216dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="11sp"
                android:textColor="@color/white"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_vc_called_user_attend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_vc_called_user_detail_name_address"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="@string/following"
            android:textSize="11sp"
            android:background="@drawable/video_details_private_chat_round"/>

    </RelativeLayout>


    <!--接通后通话时长-->
    <RelativeLayout
        android:id="@+id/rl_vc_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/rl_vc_called_user_detail"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="9dp"
        android:visibility="gone"
        android:background="@drawable/video_chat_chat_time_round">
        <TextView
            android:id="@+id/rl_vc_chat_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="时长:"/>
        <TextView
            android:id="@+id/rl_vc_chat_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/rl_vc_chat_time_title"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="00:00"/>
    </RelativeLayout>


    <!--接通后主播获得的爱心-->
    <RelativeLayout
        android:id="@+id/rl_vc_chat_love"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/rl_vc_chat_time"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="9dp"
        android:visibility="gone"
        android:background="@drawable/video_chat_chat_time_round">
        <TextView
            android:id="@+id/rl_vc_chat_love_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="爱心:"/>
        <TextView
            android:id="@+id/rl_vc_chat_love_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/rl_vc_chat_love_title"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="0"/>
    </RelativeLayout>

    <!--礼物动画-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/rl_vc_chat_love"
        android:orientation="vertical">

        <net.iaround.ui.view.pipeline.PipelineGiftView
            android:id="@+id/pipelineView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <net.iaround.ui.view.pipeline.PipelineGiftView
            android:id="@+id/pipelineView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <net.iaround.ui.view.pipeline.PipelineGiftView
            android:id="@+id/pipelineView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:gravity="center_horizontal">

        <net.iaround.ui.view.LuxuryGiftView
            android:id="@+id/luxuryGiftView"
            android:layout_width="370dp"
            android:layout_height="180dp" />
    </RelativeLayout>

    <!--被叫接通前的头像和状态-->
    <RelativeLayout
        android:id="@+id/rl_vc_called_user_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <net.iaround.ui.view.HeadPhotoView
            android:id="@+id/hv_vc_called_user_state_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"/>

        <TextView
            android:id="@+id/tv_vc_called_user_state_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hv_vc_called_user_state_icon"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:maxWidth="70dp"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:minLines="1"/>

        <TextView
            android:id="@+id/tv_vc_called_user_state_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hv_vc_called_user_state_icon"
            android:layout_below="@id/tv_vc_called_user_state_name"
            android:maxWidth="216dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:text="@string/video_chat_waiting_conform"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <!--举报按钮-->
    <ImageView
        android:id="@+id/iv_video_chat_report"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:visibility="gone"
        android:src="@drawable/video_details_report"/>

    <!--关闭视频按钮-->
    <ImageView
        android:id="@+id/iv_video_chat_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:padding="10dp"
        android:visibility="gone"
        android:src="@drawable/video_details_close"/>

    <!--主叫和被叫接通后的工具条-->
    <LinearLayout
        android:id="@+id/lv_vc_calling_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone">
        <!--倒计时提示-->
        <LinearLayout
            android:id="@+id/ll_vc_calling_tool_left_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_vc_calling_tool_time_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="visible"
                android:textColor="@color/white"
                android:text="@string/video_chat_end_left_title"/>

            <TextView
                android:id="@+id/tv_vc_calling_tool_time_left_seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:visibility="visible"
                android:textColor="@color/white"
                android:text="2:59"/>
        </LinearLayout>
        <!--倒计时进度条-->
        <ProgressBar
            android:id="@+id/pb_vc_calling_tool_progress"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/video_details_video_progress_bar"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/video_details_bottom_chat_round">

            <!--美颜按钮-->
            <LinearLayout
                android:id="@+id/ll_vc_calling_tool_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="14dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_vc_calling_tool_beauty"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/video_chat_beauty_open"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:text="@string/video_chat_beauty"/>
            </LinearLayout>

            <!--切换摄像头按钮-->
            <LinearLayout
                android:id="@+id/ll_vc_calling_tool_camera"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_vc_calling_tool_beauty"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_vc_calling_tool_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/video_chat_switch_camera"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:text="@string/video_chat_camera"/>
            </LinearLayout>

            <!--模糊按钮-->
            <LinearLayout
                android:id="@+id/ll_vc_calling_tool_blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/ll_vc_calling_tool_camera"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_vc_calling_tool_blur"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/video_chat_blur_close"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:text="@string/video_chat_blur"/>
            </LinearLayout>


            <!--加时按钮-->
            <LinearLayout
                android:id="@+id/ll_vc_calling_tool_add_time"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_vc_calling_tool_blur"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_video_chat_add_time"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/video_chat_add_time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:text="@string/video_chat_addtime"/>
            </LinearLayout>

            <!--送礼按钮-->
            <LinearLayout
                android:id="@+id/ll_vc_calling_tool_present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_marginTop="14dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_vc_calling_tool_present"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/video_chat_present"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:text="@string/video_chat_present"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!--主叫未接通前的工具条-->
    <RelativeLayout
        android:id="@+id/rl_vc_before_call_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="48dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_vc_before_call_tool_beauty"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/video_chat_beauty_open"/>
            <TextView
                android:id="@+id/tv_vc_before_call_tool_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/video_chat_beauty_enable"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_vc_before_call_tool_hang"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:src="@drawable/video_chat_hang_up"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/video_chat_hangup"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="48dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_vc_before_call_tool_blur"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:src="@drawable/video_chat_blur_close"/>
            <TextView
                android:id="@+id/tv_vc_before_call_tool_blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/video_chat_blur_disable"/>
        </LinearLayout>
    </RelativeLayout>

    <!--来电方的背景图-->
    <ImageView
        android:id="@+id/iv_vc_before_call_caller_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!--来电方的头像和昵称-->
    <LinearLayout
        android:id="@+id/ll_vc_before_call_caller"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginTop="202dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" >
        <net.iaround.ui.view.HeadPhotoView
            android:id="@+id/hv_vc_before_call_caller_icon"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_vc_before_call_caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="@string/video_chat_invite"/>
    </LinearLayout>

    <!--被叫未接通前的的工具条-->
    <LinearLayout
        android:id="@+id/rl_vc_before_call_callee_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_vc_before_call_callee_tool_hang"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:src="@drawable/video_chat_hang_up"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/video_chat_hangup"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_vc_before_call_callee_tool_answer"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:src="@drawable/video_chat_answer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/video_chat_answer"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>