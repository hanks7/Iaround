<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_popup_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_window_bg"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/apply_refund"
            android:textColor="@color/common_black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/refund_reason"
            android:textColor="@color/common_black"
            android:layout_marginLeft="@dimen/margin_left"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/tv_reason_one"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/selector_filter_round_rectangle_bg"
                android:gravity="center"
                android:text="@string/reason_one"
                android:textColor="@drawable/selector_text_black_white_bg"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_reason_two"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/selector_filter_round_rectangle_bg"
                android:gravity="center"
                android:text="@string/reason_two"
                android:textColor="@drawable/selector_text_black_white_bg"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_reason_three"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/selector_filter_round_rectangle_bg"
                android:gravity="center"
                android:text="@string/reason_three"
                android:textColor="@drawable/selector_text_black_white_bg"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other_reason"
            android:textColor="@color/common_black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="10dp"
            android:background="@color/chat_bg"
            android:gravity="top"
            android:hint="@string/refund_reason_other"
            android:padding="8dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/ll_content"
        android:background="@drawable/icon_close" />

</RelativeLayout>