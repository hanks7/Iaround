<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_show_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_white">

    <LinearLayout
        android:id="@+id/ly_user_info_pic1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_head_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/y410"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/x3"/>
        <ImageView
            android:id="@+id/iv_head_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/y410"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/x3"/>
        <ImageView
            android:id="@+id/iv_head_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/y410"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/x3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_user_info_pic2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/y3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_head_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/y410"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/x3"/>
        <ImageView
            android:id="@+id/iv_head_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/y410"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/x3"/>
        <ImageView
            android:id="@+id/iv_head_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/y410"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/x3"/>
    </LinearLayout>

</LinearLayout>