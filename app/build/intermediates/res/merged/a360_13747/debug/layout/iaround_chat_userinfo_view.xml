<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userinfo_ly"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:textColor="@color/c_999999"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/ivSVIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:src="@drawable/z_common_svip_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:textColor="@color/c_999999"
        android:textSize="12dp" />
    <!--成员身份-->
    <LinearLayout
        android:id="@+id/role_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIdentity_manager"
            android:layout_width="40dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvIdentity_owner"
            android:layout_width="40dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="11sp"
            android:visibility="gone" />
    </LinearLayout>

    <net.iaround.ui.view.pipeline.UserTitleView
        android:id="@+id/friend_ustitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </net.iaround.ui.view.pipeline.UserTitleView>
    <!--魅力排行榜-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_charm_rank"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/skill_active_dameme_four"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="18dp"
                android:paddingTop="3dp"
                android:textColor="@color/common_white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_top"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/skill_active_dameme_four"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:textColor="@color/common_white"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wealth_rank"
            android:layout_width="50dp"
            android:layout_height="14dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/chat_bar_recuit"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_wealth_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:text="@string/chat_bar_member_recuit"
                android:textColor="@color/common_white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_wealth_top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/common_white"
                android:textSize="11sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>