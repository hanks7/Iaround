<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ImageView
            android:id="@+id/gifts_icon"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/gifts_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/gifts_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="青蛙王子"
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/send_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_below="@+id/gifts_name"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/love_count"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="赠送者：13456"
                android:textColor="#999999"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/send_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_name"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/love_count"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="赠送时间：2015-08-15"
                android:textColor="#999999"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/love_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/name"
                android:gravity="center"
                android:singleLine="true"
                android:text="+20"
                android:textColor="#ffbd54"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/love_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/love_count"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/love_points"
                android:textColor="#ffbd54"
                android:textSize="10dp" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/listview_item_divider" />
    </RelativeLayout>

</RelativeLayout>