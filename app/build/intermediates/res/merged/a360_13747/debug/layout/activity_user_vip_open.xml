<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <net.iaround.ui.comon.NetImageView
            android:id="@+id/iv_vip_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y480"
            android:scaleType="fitXY"
            android:src="@drawable/vp_demo" />

        <include layout="@layout/activity_user_vip_open_package" />

        <LinearLayout
            android:id="@+id/ll_open_new_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:layout_marginTop="@dimen/y60"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_new_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x72"
                android:layout_weight="1"
                android:text="@string/vip_buy_order_new"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y42"
                android:layout_marginRight="@dimen/x48"
                android:src="@drawable/user_detail" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/chat_update_divider_of_toolMenu" />

        <LinearLayout
            android:id="@+id/ll_open_migu_animation_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_migu_animation_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x72"
                android:layout_weight="1"
                android:text="@string/vip_buy_order_animation"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y42"
                android:layout_marginRight="@dimen/x48"
                android:src="@drawable/user_detail" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/chat_update_divider_of_toolMenu" />
        <!--充值帮助-->
        <LinearLayout
            android:id="@+id/ll_open_pay_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:layout_marginBottom="@dimen/y60"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x72"
                android:layout_weight="1"
                android:text="@string/user_vip_open_help"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y42"
                android:layout_marginRight="@dimen/x48"
                android:src="@drawable/user_detail" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

