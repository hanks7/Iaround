<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color">

    <net.iaround.ui.view.HeadPhotoView
        android:id="@+id/ivcomment_icon"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginBottom="@dimen/y32"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x18"
        android:scaleType="centerCrop"
        android:src="@drawable/iaround_default_img"/>

    <TextView
        android:id="@+id/user_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivcomment_icon"
        android:layout_marginTop="@dimen/y64"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#222222"
        android:textSize="@dimen/y42" />

    <LinearLayout
        android:id="@+id/ly_comment_age"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/y42"
        android:layout_toRightOf="@+id/user_comment_name"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginTop="@dimen/y72"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_comment_sex"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="@dimen/x2" />

        <TextView
            android:id="@+id/tv_comment_age"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:textColor="@color/common_white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_timer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y42"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/y55"
        android:layout_marginRight="@dimen/x48"
        android:textSize="@dimen/y30"
        android:textColor="@color/gray_text_color"/>


    <TextView
        android:id="@+id/user_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text_color"
        android:textSize="@dimen/y39"
        android:layout_marginTop="@dimen/y33"
        android:paddingBottom="@dimen/y50"
        android:layout_marginRight="@dimen/x36"
        android:layout_below="@+id/user_comment_name"
        android:layout_alignLeft="@+id/user_comment_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x36"
        android:layout_below="@id/user_notes"
        android:background="#E6E6E6"/>

</RelativeLayout>