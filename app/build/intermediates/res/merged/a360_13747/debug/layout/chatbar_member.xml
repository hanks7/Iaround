<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp">
    <net.iaround.ui.view.HeadPhotoView
        android:id="@+id/uesrIcon"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:id="@+id/ll_userInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/uesrIcon"
        android:layout_toLeftOf="@id/tvDistance"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginBottom="6dp"
            android:textColor="@color/chat_update_edit_user_value"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvIdentity_manager"
            android:layout_width="40dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/tvName"
            android:textColor="@color/common_white"
            android:textSize="11sp"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/rl_age_sex"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:layout_below="@id/tvName">
            <ImageView
                android:id="@+id/ivSex"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp" />
            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivSex"
                android:textColor="@color/common_white"
                android:layout_centerVertical="true"
                android:textSize="10sp"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp"
        android:layout_marginTop="40dp"
        android:textSize="10sp"
        android:textColor="@color/chat_update_gray_text_color"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="100dp"
        android:background="@color/chat_update_divider_of_messageItem"/>
</RelativeLayout>