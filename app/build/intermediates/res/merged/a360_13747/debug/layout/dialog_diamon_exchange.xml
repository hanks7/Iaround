<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_bg" >

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="214dp" >

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="170dp" >

            <TextView
                android:id="@+id/dialog_title_left"
                style="@style/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:text="价格：200万金币"
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dialog_title_right"
                style="@style/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:text="@string/diamonconvertdialog_title_right"
                android:textColor="#ef555e"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dialog_title_right"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/diamonconvertdialog_title"
                    android:textColor="#333333"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/dialog_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialog_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#333333"
                    android:text="钻石直购优惠钻石直购优惠钻石直购优惠钻石直购优惠钻石直购优惠"
                    android:textSize="16dp" />
            </RelativeLayout>

       
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.6dip"
            android:layout_above="@+id/btn_ly"
            android:background="#e3e3e3"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/btn_ly"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_negative"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="13dp"
                android:text="@string/cancel"
                android:textColor="@color/x_store_dialog_text_color"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/dialog_btn_devider"
                android:layout_width="0.6dip"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#e3e3e3" />

            <TextView
                android:id="@+id/dialog_positive"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="13dp"
                android:text="@string/ok"
                android:textColor="@color/x_store_dialog_text_color"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>