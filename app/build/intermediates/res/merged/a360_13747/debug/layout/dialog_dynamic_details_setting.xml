<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_dynamic_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/bg_color">

        <TextView
            android:id="@+id/tv_pop_dynamic_details_delete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y168"
            android:gravity="center"
            android:textColor="@color/title_text"
            android:background="@drawable/list_item_bg_selector"
            android:textSize="@dimen/y45"
            android:visibility="gone"
            android:text="@string/dynamic_details_pop_delete"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ly_pop_dynamic_details_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y315"
                android:background="@color/common_white"
                android:visibility="gone"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ly_pop_dynamic_details_other_notice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/list_item_bg_selector"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_pop_dynamic_details_other_notice"
                        android:layout_width="@dimen/x122"
                        android:layout_height="@dimen/y122"
                        android:src="@drawable/dynamic_details_other_notice"/>
                    <TextView
                        android:id="@+id/tv_pop_dynamic_details_other_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y41"
                        android:textColor="@color/title_text"
                        android:textSize="@dimen/y33"
                        android:text="@string/dynamic_details_pop_other_notice"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_pop_dynamic_details_mine_notice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/list_item_bg_selector"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_pop_dynamic_details_mine_notice"
                        android:layout_width="@dimen/x122"
                        android:layout_height="@dimen/y122"
                        android:src="@drawable/dynamic_details_mine_notice"/>
                    <TextView
                        android:id="@+id/tv_pop_dynamic_details_mine_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y41"
                        android:gravity="center_horizontal"
                        android:textColor="@color/title_text"
                        android:textSize="@dimen/y33"
                        android:text="@string/dynamic_details_pop_mine_notice"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_pop_dynamic_details_report_user"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/list_item_bg_selector"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_report_user"
                        android:layout_width="@dimen/x122"
                        android:layout_height="@dimen/y122"
                        android:src="@drawable/dynamic_details_report"/>
                    <TextView
                        android:id="@+id/tv_report_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y41"
                        android:gravity="center_horizontal"
                        android:textColor="@color/title_text"
                        android:textSize="@dimen/y33"
                        android:text="@string/dynamic_details_pop_report"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_pop_other_info_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y315"
                android:background="@color/common_white"
                android:visibility="gone"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ly_pop_black_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/list_item_bg_selector"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_black_list"
                        android:layout_width="@dimen/x122"
                        android:layout_height="@dimen/y122"
                        android:src="@drawable/otherinfo_more_black"/>
                    <TextView
                        android:id="@+id/tv_black_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y41"
                        android:gravity="center_horizontal"
                        android:textColor="@color/title_text"
                        android:textSize="@dimen/y33"
                        android:text="@string/dynamic_details_black_list"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_pop_userinfo_remarks"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/list_item_bg_selector"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_userinfo_remarks"
                        android:layout_width="@dimen/x122"
                        android:layout_height="@dimen/y122"
                        android:src="@drawable/otherinfo_more_remarks"/>
                    <TextView
                        android:id="@+id/tv_userinfo_remarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y41"
                        android:gravity="center_horizontal"
                        android:textColor="@color/title_text"
                        android:textSize="@dimen/y33"
                        android:text="@string/dynamic_details_remarks"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/list_item_bg_selector"
                    android:orientation="vertical"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_dynamic_details_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pop_dynamic_details_copy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y168"
                android:layout_marginTop="@dimen/y30"
                android:gravity="center"
                android:textColor="@color/title_text"
                android:background="@drawable/list_item_bg_selector"
                android:textSize="@dimen/y45"
                android:text="@string/dynamic_details_pop_copy"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/encounter_base_info_line"/>

            <TextView
                android:id="@+id/tv_pop_dynamic_details_comment_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y168"
                android:gravity="center"
                android:textColor="@color/title_text"
                android:background="@drawable/list_item_bg_selector"
                android:textSize="@dimen/y45"
                android:text="@string/dynamic_details_pop_delete"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_pop_dynamic_details_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y168"
            android:layout_marginTop="@dimen/y30"
            android:gravity="center"
            android:textColor="@color/title_text"
            android:background="@drawable/list_item_bg_selector"
            android:textSize="@dimen/y45"
            android:text="@string/dynamic_details_pop_cancel"/>

        </LinearLayout>

</FrameLayout>