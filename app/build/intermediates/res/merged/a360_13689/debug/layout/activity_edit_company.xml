<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginTop="@dimen/y36"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_user_signature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x48"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/edit_user_company_hint"
            android:textColor="@color/edit_user_value"
            android:textColorHint="#BBBBBB"
            android:textSize="@dimen/y42" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/y82"
            android:layout_height="@dimen/y82"
            android:layout_marginRight="@dimen/x28"
            android:paddingBottom="@dimen/x20"
            android:src="@drawable/edit_text_delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_edit"
        android:layout_marginLeft="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_edit_company_count_curr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/y36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="@dimen/y36" />

        <TextView
            android:id="@+id/tv_edit_nickname_count_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/y36" />
    </LinearLayout>


</RelativeLayout>
