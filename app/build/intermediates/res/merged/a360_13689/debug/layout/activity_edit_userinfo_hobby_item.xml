<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#EBEBEB"
        android:layout_marginLeft="@dimen/x45"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hobby_type_icon"
            android:layout_width="@dimen/y54"
            android:layout_height="@dimen/y60"
            android:layout_marginLeft="@dimen/x48"
            android:src="@drawable/edit_lable" />

        <TextView
            android:id="@+id/tv_hobby_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:text="标签"
            android:textColor="#2CD18C"
            android:textSize="@dimen/y42" />

        <!--<net.iaround.ui.view.user.OneLineFlowLayout
            android:id="@+id/detail_flow_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x30" />-->

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x90"
            android:text="@dimen/y42"
            android:textColor="#4A4A4A"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/edit_lable"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_marginRight="@dimen/x48"
            android:src="@drawable/user_detail" />

    </LinearLayout>
</LinearLayout>