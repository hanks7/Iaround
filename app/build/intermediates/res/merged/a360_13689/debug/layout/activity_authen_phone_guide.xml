<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#EBEBEB" />
    <TextView
        android:id="@+id/tv_phone_authen_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y60"
        android:text="@string/authen_phone_release_text"
        android:textColor="@color/gray_text_color"
        android:textSize="@dimen/y42" />

    <LinearLayout
        android:id="@+id/ll_phone_authen_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y204"
        android:layout_marginTop="@dimen/y60"
        android:background="#F2F2F2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/y120"
            android:layout_marginLeft="@dimen/x57"
            android:src="@drawable/phone_authen" />

        <LinearLayout
            android:id="@+id/ll_user_phone_authen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y120"
            android:layout_marginLeft="@dimen/x36"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/y42" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_phone_authen_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x72"
        android:layout_marginRight="@dimen/x72"
        android:layout_marginTop="@dimen/y41"
        android:gravity="center"
        android:text="@string/authen_phone_suc_tips"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/y36" />

    <Button
        android:id="@+id/btn_phone_authen_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y124"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y43"
        android:background="@drawable/btn_takepic_selector"
        android:gravity="center"
        android:text="@string/authen_phone_change_phoennum"
        android:textColor="@color/common_white"
        android:textSize="@dimen/y42" />


</LinearLayout>
