<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ecebf1"
    android:orientation="vertical" >

    <include
        android:id="@+id/activity_title"
        layout="@layout/title_with_right_text" />

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:fadingEdge="none"
        android:isScrollContainer="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/c_ecebf1"
                android:gravity="center_vertical"
                android:paddingLeft="11dp"
                android:text="@string/group_publish_gatherings_tips"
                android:textColor="@color/c_444444"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etTextContent"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@color/transparent"
                android:gravity="left|top"
                android:hint="@string/share_say_something_text"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_cccccc"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/llAddress"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="11dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/ivFace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/iaround_chat_face" />

                <TextView
                    android:id="@+id/tvCountLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ivFace"
                    android:paddingRight="5dp"
                    android:textColor="@color/c_999999"
                    android:textSize="17dp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="22dp"
                android:background="@color/c_cccccc" />

            <RelativeLayout
                android:id="@+id/together_date"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="11dp" >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical"
                    android:text="@string/group_gather_data"
                    android:textColor="@color/c_999999"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:inputType="date"
                    android:paddingRight="22dp"
                    android:textColor="@color/c_444444"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/pickdate"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:paddingRight="22dp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="22dp"
                android:background="@color/c_cccccc" />

            <RelativeLayout
                android:id="@+id/together_time"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="11dp" >

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical"
                    android:text="@string/group_gathering_time"
                    android:textColor="@color/c_999999"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:inputType="time"
                    android:paddingRight="22dp"
                    android:textColor="@color/c_444444"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/picktime"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:paddingRight="22dp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="22dp"
                android:background="@color/c_cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="11dp"
                android:paddingBottom="22dp" >

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical"
                    android:text="@string/group_gathering_address"
                    android:textColor="@color/c_999999"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/address_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="22dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/transparent"
                    android:hint="@string/group_gathering_address_hint"
                    android:textColor="@color/c_444444"
                    android:textColorHint="@color/c_cccccc"
                    android:textSize="17sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/c_ecebf1"
                android:drawableLeft="@drawable/arraw_expand"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:paddingLeft="11dp"
                android:text="@string/more"
                android:textColor="@color/c_444444"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="11dp" >

                <TextView
                    android:id="@+id/contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical"
                    android:text="@string/group_gathering_phone"
                    android:textColor="@color/c_999999"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:hint="@string/group_gathering_phone_content"
                    android:paddingTop="3dp"
                    android:textColor="@color/c_444444"
                    android:textColorHint="@color/c_cccccc"
                    android:textSize="17sp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="22dp"
                android:background="@color/c_cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="11dp" >

                <TextView
                    android:id="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/group_gathering_pay"
                    android:textColor="@color/c_999999"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_pay"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:hint="@string/group_gathering_pay_content"
                    android:textColor="@color/c_444444"
                    android:textColorHint="@color/c_cccccc"
                    android:textSize="17sp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="22dp"
                android:background="@color/c_cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="11dp" >

                <TextView
                    android:id="@+id/tvphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/group_gathering_photo"
                    android:textColor="@color/c_999999"
                    android:textSize="18sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/vArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="34dp"
                android:src="@drawable/dynamic_arrow" />

            <LinearLayout
                android:id="@+id/llImageContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:background="@color/c_ecebf1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:paddingBottom="11dp"
                android:paddingLeft="22dp"
                android:paddingTop="11dp" >

                <LinearLayout
                    android:id="@+id/llFirstRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSecondRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center|left"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlFaceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_bbbbbb" >
    </RelativeLayout>

</LinearLayout>