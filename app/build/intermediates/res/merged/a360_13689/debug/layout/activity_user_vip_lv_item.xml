<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y210"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_power_logo"
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/y120"
            android:layout_marginLeft="@dimen/x36" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x33"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="防止骚扰"
                android:textColor="#222222"
                android:textSize="@dimen/y42" />

            <TextView
                android:id="@+id/tv_power_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y27"
                android:text="私聊消息，优先展示"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/y36" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_marginRight="@dimen/x48"
            android:src="@drawable/user_detail" />

    </LinearLayout>
</LinearLayout>