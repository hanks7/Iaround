    android:orientation="vertical">

    <!--月收入-->
    <LinearLayout
        android:id="@+id/ll_edit_income"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x354"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x48"
            android:text="@string/edit_income"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/y42" />

        <TextView
            android:id="@+id/tv_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/edit_user_value"
            android:textSize="@dimen/y42" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_marginRight="@dimen/x48"
            android:src="@drawable/user_detail" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/chat_update_divider_of_messageItem"
        android:layout_marginLeft="@dimen/x48"/>

