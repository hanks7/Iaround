<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_corners">

    <RelativeLayout
        android:id="@+id/rl_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_dialog_title_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:src="@drawable/dialog_title_icon"/>

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_dialog_title_view1"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/dialog_sklill_update_title"/>

        <ImageView
            android:id="@+id/iv_dialog_title_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_dialog_title"
            android:layout_marginLeft="9dp"
            android:background="@drawable/dialog_title_icon"/>

    </RelativeLayout>
    
    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_margin="3dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/dialog_skill_update_close"/>

    <RelativeLayout
        android:id="@+id/rl_dialog_have"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingBottom="15dp"
        android:background="#FFE037"
        android:layout_below="@+id/rl_dialog_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_dialog_skill_update_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="21dp"
            android:text="@string/dialog_skill_update_title1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_dialog_skill_update_diamond_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="21dp"
            android:drawableLeft="@drawable/chatbar_gift_diamond_icon"
            android:layout_below="@id/tv_dialog_skill_update_title1"
            android:text="@string/diamond_balance"
            android:textSize="12sp"
            android:textColor="@color/title_text_color"/>

        <TextView
            android:id="@+id/tv_dialog_skill_update_diamond"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_dialog_skill_update_title1"
            android:layout_toRightOf="@id/tv_dialog_skill_update_diamond_1"
            android:textSize="12sp"
            android:singleLine="true"
            android:minLines="1"
            android:textColor="@color/title_text_color"/>


        <TextView
            android:id="@+id/tv_dialog_skill_update_gold_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="9dp"
            android:layout_toLeftOf="@+id/tv_dialog_skill_update_gold"
            android:drawableLeft="@drawable/chatbar_gift_coin_icon"
            android:layout_below="@id/tv_dialog_skill_update_title1"
            android:text="@string/gold_balance"
            android:textSize="12sp"
            android:textColor="@color/title_text_color"/>

        <TextView
            android:id="@+id/tv_dialog_skill_update_gold"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="21dp"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:minLines="1"
            android:layout_below="@id/tv_dialog_skill_update_title1"
            android:textSize="12sp"
            android:textColor="@color/title_text_color"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dialog_skill_update_recomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_dialog_have"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="21dp"
        android:text="@string/dialog_skill_update_recommended_upgrade"
        android:textColor="#343434"
        android:textSize="15sp"/>

    <ListView
        android:id="@+id/lv_dialog_skill_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:scrollbars="none"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:listSelector="@android:color/transparent"
        android:layout_below="@id/tv_dialog_skill_update_recomment"/>


</RelativeLayout>