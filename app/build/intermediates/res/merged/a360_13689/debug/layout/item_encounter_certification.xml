<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/y160"
    android:background="@color/common_white">
    
    <ImageView
        android:id="@+id/iv_encounter_certification_pic"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y120"
        android:layout_marginTop="@dimen/y51"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginBottom="@dimen/y33"
        android:layout_toRightOf="@id/iv_encounter_certification_pic"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_encounter_certification_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_black"
            android:textSize="@dimen/y42"/>

        <TextView
            android:id="@+id/tv_encounter_certification_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:textColor="@color/common_grey"
            android:textSize="@dimen/y42"/>
    </LinearLayout>


</RelativeLayout>