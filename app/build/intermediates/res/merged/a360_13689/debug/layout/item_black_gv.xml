<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <net.iaround.ui.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y48"/>

        <ImageView
            android:id="@+id/iv_delete_icon"
            android:layout_width="@dimen/y60"
            android:layout_height="@dimen/y60"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/y33"
            android:src="@drawable/black_delete_icon"
            android:visibility="gone"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y27"
        android:textColor="#222222"
        android:textSize="@dimen/y33" />

</LinearLayout>