<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userFragment_bg">
    <include
        android:id="@+id/title_layout"
        layout="@layout/title_bar"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_below="@+id/title_layout"
        android:background="@color/chat_update_divider_of_messageItem"/>
    <EditText
        android:id="@+id/et_group_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:layout_below="@+id/divider"
        android:layout_marginTop="@dimen/y37"
        android:paddingTop="@dimen/y39"
        android:paddingBottom="@dimen/y39"
        android:paddingLeft="@dimen/x48"
        android:paddingRight="@dimen/x48"
        android:background="@color/common_white"
        android:gravity="left|top"
        android:hint="@string/group_edit_groupDesc"
        android:textColorHint="@color/chat_update_gray_text_color"
        android:maxLength="50"
        android:textSize="@dimen/y42"
        android:textColor="@color/chat_update_edit_user_value"
        />
    <ImageView
        android:id="@+id/group_face_menu"
        android:layout_width="@dimen/x78"
        android:layout_height="@dimen/y78"
        android:layout_below="@+id/et_group_desc"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginLeft="@dimen/x48"
        android:src="@drawable/iaround_new_chat_face_normal"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/et_group_desc"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/y48"
        android:layout_marginRight="@dimen/x48"
        android:visibility="gone">
        <TextView
            android:id="@+id/group_desc_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y42"
            android:textColor="@color/chat_update_message_count"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y42"
            android:textColor="@color/chat_update_gray_text_color"
            android:text="@string/group_edit_groupDesc_num"/>
    </LinearLayout>
</RelativeLayout>
