<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:id="@+id/ly_chat_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y36"
        android:background="@drawable/list_item_bg_selector"
        android:orientation="horizontal">
        
        <!--<ImageView-->
            <!--android:id="@+id/iv_chat_avatar"-->
            <!--android:layout_width="@dimen/x180"-->
            <!--android:layout_height="@dimen/y180"-->
            <!--android:layout_margin="@dimen/x30"/>-->
        <net.iaround.ui.view.HeadPhotoView
            android:id="@+id/iv_chat_avatar"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y180"
            android:layout_margin="@dimen/x30"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x42"
                android:textColor="@color/common_black"/>

            <TextView
                android:id="@+id/tv_chat_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:textSize="@dimen/x36"
                android:textColor="@color/gray_text_color"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_margin="@dimen/x48"
            android:src="@drawable/arraw_turn"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_chat_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y36"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_bg_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y39"
            android:layout_marginBottom="@dimen/y39"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:text="@string/chat_setting_remarks"
            android:textColor="@color/edit_user_value"
            android:textSize="@dimen/x42"/>

        <TextView
            android:id="@+id/tv_chat_remarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/y42"
            android:textColor="@color/gray_text_color"
            android:gravity="right"/>

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_margin="@dimen/x48"
            android:src="@drawable/arraw_turn"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x45"
        android:background="@color/line"/>

    <LinearLayout
        android:id="@+id/ly_chat_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_bg_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y39"
            android:layout_marginBottom="@dimen/y39"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:text="@string/chat_setting_black"
            android:textColor="@color/edit_user_value"
            android:textSize="@dimen/x42"/>

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_margin="@dimen/x48"
            android:src="@drawable/arraw_turn"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x45"
        android:background="@color/line"/>

    <LinearLayout
        android:id="@+id/ly_chat_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_bg_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y39"
            android:layout_marginBottom="@dimen/y39"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:text="@string/chat_setting_report"
            android:textColor="@color/edit_user_value"
            android:textSize="@dimen/x42"/>

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_margin="@dimen/x48"
            android:src="@drawable/arraw_turn"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x45"
        android:background="@color/line"/>

    <LinearLayout
        android:id="@+id/ly_chat_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/list_item_bg_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y39"
            android:layout_marginBottom="@dimen/y39"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:text="@string/chat_setting_clear"
            android:textColor="@color/edit_user_value"
            android:textSize="@dimen/x42"/>

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_margin="@dimen/x48"
            android:src="@drawable/arraw_turn"/>

    </LinearLayout>



</LinearLayout>