<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg_color"
    android:orientation="vertical"
    android:paddingTop="@dimen/y48">

    <RelativeLayout
        android:id="@+id/rl_base_info_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y24"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x36"
            android:textColor="#222222"
            android:textSize="@dimen/y48"
            android:layout_marginRight="5dp"/>
        <net.iaround.ui.view.pipeline.UserTitleView
            android:id="@+id/other_info_user_title"
            android:layout_toRightOf="@+id/tv_nickname"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </net.iaround.ui.view.pipeline.UserTitleView>
        <TextView
            android:id="@+id/iv_other_ranking"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_toRightOf="@+id/tv_nickname"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:textSize="12sp"
            android:textColor="@color/main_bg_color"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_time_and_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x48"
            android:layout_marginTop="@dimen/y9"
            android:gravity="center_vertical"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/y30" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x36"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rlAgeSex"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y42">
            <ImageView
                android:id="@+id/ivSex"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/y42"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x3"/>
            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivSex"
                android:layout_marginLeft="@dimen/x2"
                android:textColor="@color/common_white"
                android:textSize="@dimen/y30"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_horoscope"
            android:layout_width="@dimen/x114"
            android:layout_height="@dimen/y42"
            android:layout_toRightOf="@+id/rlAgeSex"
            android:layout_marginLeft="@dimen/x12"
            android:textSize="@dimen/y30"
            android:gravity="center"
            android:background="@drawable/encounter_dynamic_constellation_circel_bg"
            android:textColor="@color/common_white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y42"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:layout_marginTop="@dimen/y36"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/y42" />

</LinearLayout>