<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_white"
    android:orientation="vertical">


    <include layout="@layout/title_bar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/chat_update_divider_of_toolMenu"/>
    <LinearLayout
        android:id="@+id/ly_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y72"
        android:background="@color/login_edit"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y42"
            android:layout_marginLeft="@dimen/x45"
            android:layout_marginRight="@dimen/x57"
            android:layout_marginTop="@dimen/y48"
            android:layout_marginBottom="@dimen/y48"
            android:background="@drawable/email_forget_rest"/>

        <AutoCompleteTextView
            android:id="@+id/etRegEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x138"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:hint="@string/please_enter_your_regitered_email_add"
            android:background="@null"
            android:inputType="text"
            android:textColor="@color/common_black"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/y42"
            android:dropDownHeight="@dimen/y500"
            android:completionThreshold="1"
            android:dropDownVerticalOffset="@dimen/y45"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y66"
        android:background="@drawable/btn_register_next_selector"
        android:padding="@dimen/y41"
        android:enabled="false"
        android:text="@string/next"
        android:textColor="@color/common_white"
        android:textSize="@dimen/y42" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x105"
        android:layout_marginTop="@dimen/y50"
        android:text="@string/find_password_directions"
        android:textColor="#7B7B7B"
        android:textSize="@dimen/y36" />

</LinearLayout>