<?xml version="1.0" encoding="utf-8"?>
<net.iaround.floatwindow.FloatWindowView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    app:floatWindowWidth="50dp"
    app:floatWindowHeight="50dp"
    app:screenBottom="80dp"
    app:screenRight="5dp">

    <RelativeLayout
        android:id="@+id/rl_chatbar_zoom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/chatbar_zoom_view_shap">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="@drawable/chatbar_zoom_icon_bg"/>
            <net.iaround.ui.view.CircleImageView
                android:id="@+id/zoom_chatbar_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon"/>
        </RelativeLayout>

    </RelativeLayout>

</net.iaround.floatwindow.FloatWindowView>