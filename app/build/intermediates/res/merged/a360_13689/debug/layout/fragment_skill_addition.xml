<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/moon_charge_title_bar"
        layout="@layout/title_bar" />

    <net.iaround.ui.view.WrapperScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:paddingEnd="15dp"
                android:paddingStart="20dp">

                <ImageView
                    android:id="@+id/iv_addtion_gold"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_addtion_gold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/iv_addtion_gold"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_gold_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/gold_addition"
                        android:textColor="@color/country_group"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_gold_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text_color"
                        android:textSize="12sp"
                        tools:text="升级技能消耗钻石,星星，成功率" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/set_line1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/chat_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:paddingEnd="15dp"
                android:paddingStart="20dp">

                <ImageView
                    android:id="@+id/iv_addtion_expend"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_addition_expend" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/iv_addtion_expend"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_expend_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/expend_addition"
                        android:textColor="@color/country_group"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_expend_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text_color"
                        android:textSize="12sp"
                        tools:text="升级技能消耗金月亮，成功率+15%" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/set_line2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/chat_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingEnd="15dp"
                android:paddingStart="20dp">

                <ImageView
                    android:id="@+id/iv_addtion_rank"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_addition_rank" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/iv_addtion_rank"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_rank_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/rank_addition_title"
                        android:textColor="@color/country_group"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rank_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rank_level_update_rate"
                            android:textColor="@color/gray_text_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_rank_desc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/following_table"
                            android:textColor="@color/light_red"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_addition_rank"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/place_competition"
                    android:textColor="@color/light_purple"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/gold_rank"
                    android:textColor="@color/light_purple"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/charm_rank"
                    android:textColor="@color/light_purple"
                    android:textSize="12sp" />
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/addition_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/set_line1"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp" />

            <LinearLayout
                android:id="@+id/ly_success_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:orientation="vertical">

                <View
                    android:id="@+id/set_line3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/moon_recyclerView"
                    android:background="@color/chat_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="20dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_addtion_success_rank"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_addition_recharge" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/rank_addition_success_title"
                            android:textColor="@color/country_group"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_success_rank_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rank_level_update_success_rate"
                                android:textColor="@color/gray_text_color"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_suceess_rank_desc1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/following_table"
                                android:textColor="@color/light_red"
                                android:textSize="12sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_addition_rank"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|bottom"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/update_recharge_amount"
                        android:textColor="@color/light_purple"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|bottom"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/update_success_ranking"
                        android:textColor="@color/light_purple"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|bottom"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/update_success_time"
                        android:textColor="@color/light_purple"
                        android:textSize="12sp" />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/addition_success_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="50dp"/>



            </LinearLayout>


        </LinearLayout>

    </net.iaround.ui.view.WrapperScrollView>
</LinearLayout>