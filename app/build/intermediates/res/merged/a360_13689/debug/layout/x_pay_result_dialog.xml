<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">
    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"/>
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/z_common_title_bg"
        android:visibility="gone">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="35dp"
            android:paddingTop="5dp"
            android:src="@drawable/title_back_selector" />

        <TextView
            android:id="@+id/title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dip"
            android:paddingLeft="35dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/title_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dip"
            android:src="@drawable/title_back_selector"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/goods_inf"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:paddingTop="3dp"
        android:layout_below="@id/title_bar"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:gravity="left|top"
            android:text="@string/pay_result_wait_title"
            android:textColor="#999999"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="right|top"
            android:textColor="#333333"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@id/goods_inf"
        android:background="@color/white" >
        
       <View 
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:background="#e3e3e3"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/round_check_true"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/pay_result_success"
            android:textColor="#ef555e"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/open"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/login_btn_selector"
        android:gravity="center"
        android:text="@string/register_right_title_btn"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>