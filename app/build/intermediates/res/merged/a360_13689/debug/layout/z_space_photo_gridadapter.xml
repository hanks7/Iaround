<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <net.iaround.ui.comon.SquaredNetImageView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </net.iaround.ui.comon.SquaredNetImageView>

    <ImageView
        android:id="@+id/del_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/photo_view"
        android:layout_alignTop="@id/photo_view"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:visibility="gone"
        android:src="@drawable/z_common_delete_image_icon" />

    <net.iaround.ui.comon.SquaredNetImageView
        android:id="@+id/lock_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/z_space_photo_lock"
        android:visibility="visible" >
    </net.iaround.ui.comon.SquaredNetImageView>

</RelativeLayout>