<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="17dp"
    android:paddingTop="17dp" >

    <RelativeLayout
        android:id="@+id/rlInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp" >

        <net.iaround.ui.view.HeadPhotoView
            android:id="@+id/ivPhoto"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="11dp"
            android:scaleType="centerCrop"
            android:src="@drawable/boy_want_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivPhoto"
            android:ellipsize="end"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:text="我就是女王"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tvName"
            android:gravity="right"
            android:text="昨天 11：36"
            android:textColor="@color/c_999999"
            android:textSize="14.5dp" />

        <RelativeLayout
            android:id="@+id/llRelationInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/ivPhoto" >

            <TextView
                android:id="@+id/tvAgeSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@drawable/sex_bg_boy"
                android:drawablePadding="1dp"
                android:drawableRight="@drawable/sex_icon_boy"
                android:text="23"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/svip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvAgeSex"
                android:visibility="gone"
                android:src="@drawable/z_common_svip_icon" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlInfo"
        android:background="@color/white"
        android:paddingLeft="23dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="@string/group_I_publish_gather"
        android:textColor="#444444"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvJoinTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Time_Content"
        android:layout_below="@+id/tvTop"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="【时间】"
        android:textColor="#444444"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/Time_Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTop"
        android:layout_toRightOf="@+id/tvJoinTime"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="2014年11月24号 18:00"
        android:textColor="#999999"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/address_content"
        android:layout_below="@+id/Time_Content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="【地点】"
        android:textColor="#444444"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/address_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Time_Content"
        android:layout_toRightOf="@+id/tvaddress"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="广州天河科韵路御发商务"
        android:textColor="#999999"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cost_content"
        android:layout_below="@+id/address_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="【费用】"
        android:textColor="#444444"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cost_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_content"
        android:layout_toRightOf="@+id/tvCost"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="男：100 ， 女：免费"
        android:textColor="#999999"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phone_content"
        android:layout_below="@+id/cost_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="【电话】"
        android:textColor="#444444"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/phone_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cost_content"
        android:layout_toRightOf="@+id/tvPhone"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="13800138000"
        android:textColor="#999999"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/meet_content"
        android:layout_below="@+id/phone_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="【内容】"
        android:textColor="#444444"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/meet_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_content"
        android:layout_toRightOf="@+id/tvcontent"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="光棍节一起搞~！光棍节一起搞~！光棍节一起搞~！光棍节一起搞~！光棍节一起搞~！光棍节一起搞~！"
        android:textColor="#999999"
        android:textSize="16dp" />

    <net.iaround.ui.group.view.DynamicMultiImageView
        android:id="@+id/dmivPic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meet_content"
        android:background="@color/white"
        android:paddingLeft="22dp"
        android:paddingRight="18dp"
        android:paddingTop="22dp" />

    <RelativeLayout
        android:id="@+id/button_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dmivPic"
        android:background="@color/white"
        android:paddingBottom="11dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="16dp" >

        <RelativeLayout
            android:id="@+id/join_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/group_gather_btn_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/group_gather_joinbtn_selector"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="@string/group_Join_gatherings"
                android:textColor="@drawable/group_gather_text_selector"
                android:textSize="17sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/overdue_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/group_together_gray_btn"
            android:gravity="center"
            android:text="已经报名"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/revise_or_cancel_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/join_btn"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/revise_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/group_gather_btn_selector" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/group_gather_revisebtn_selector"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="@string/group_revise_gatherings"
                    android:textColor="@drawable/group_gather_text_selector"
                    android:textSize="17sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="11dp"
                android:layout_height="45dp" />

            <RelativeLayout
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/group_gather_btn_selector" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/group_gather_cancelbtn_selector"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="@string/group_cancel_gatherings"
                    android:textColor="@drawable/group_gather_text_selector"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <net.iaround.ui.group.view.GatherIconView
        android:id="@+id/dcvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_ly"
        android:orientation="vertical" />

</RelativeLayout>