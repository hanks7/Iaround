<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/sendface_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="68dip"
        android:background="@drawable/info_bg_center_selector"
        android:paddingLeft="11dip"
        android:paddingRight="11dip" >

        <ImageView
            android:id="@+id/face_img"
            android:layout_width="46dip"
            android:layout_height="46dip"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/face_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dip"
            android:layout_toRightOf="@id/face_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.35dp"
        android:background="@drawable/listview_item_divider" />

</LinearLayout>