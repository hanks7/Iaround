<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg_color">

    <RelativeLayout
        android:id="@+id/actionbar_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y168"
        >

        <FrameLayout
            android:id="@+id/fl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/y50"
                android:layout_marginTop="@dimen/y67"
                android:layout_marginLeft="@dimen/x64"
                android:layout_marginRight="@dimen/x68"
                android:src="@drawable/title_back" />

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y67"
                android:textColor="@color/login_btn"
                android:visibility="gone"
                android:textSize="@dimen/y50" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y60"
            android:layout_toRightOf="@+id/fl_back"
            android:textColor="@color/action_title_color"
            android:textSize="@dimen/y50" />

        <FrameLayout
            android:id="@+id/fl_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x51"
            android:layout_marginTop="@dimen/y56"
            >

            <ImageView
                android:id="@+id/iv_go"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                />

            <TextView
                android:id="@+id/tv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_btn"
                android:textSize="@dimen/y50"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_below="@id/actionbar_lay"
        android:background="@color/chat_bg"/>

</RelativeLayout>