<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white">

    <LinearLayout
        android:id="@+id/ll_authen_take_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="@dimen/x718"
            android:layout_height="@dimen/y884"
            android:layout_marginTop="@dimen/y81"
            android:background="@drawable/authen_guide_bg"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y96"
                android:text="@string/authen_guide"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/y42" />
            <ImageView
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/y558"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y54"
                android:src="@drawable/authen_demo_pic" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x99"
            android:layout_marginRight="@dimen/x99"
            android:layout_marginTop="@dimen/y73"
            android:gravity="center"
            android:text="@string/authen_tips"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/y42" />
        <Button
            android:id="@+id/btn_take_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y124"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/y40"
            android:background="@drawable/btn_takepic_selector"
            android:gravity="center"
            android:text="拍一张"
            android:textColor="@color/common_white"
            android:textSize="@dimen/y42" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y60"
            android:gravity="center"
            android:text="@string/authen_tips_again"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/y36" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_authen_send_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_white"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y647"
            android:layout_marginTop="@dimen/y135"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_guide_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x41"
                android:layout_weight="1"
                android:background="@drawable/authen_pic_bg"
                android:paddingBottom="@dimen/y54"
                android:paddingLeft="@dimen/x41"
                android:paddingRight="@dimen/x41"
                android:paddingTop="@dimen/y54"
                android:src="@drawable/authen_demo_pic" />

            <ImageView
                android:id="@+id/iv_authen_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x21"
                android:layout_marginRight="@dimen/x41"
                android:layout_weight="1"
                android:background="@drawable/authen_pic_bg"
                android:paddingBottom="@dimen/y54"
                android:paddingLeft="@dimen/x41"
                android:paddingRight="@dimen/x41"
                android:paddingTop="@dimen/y54"
                android:src="@drawable/authen_demo_pic" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x120"
            android:layout_marginRight="@dimen/x120"
            android:layout_marginTop="@dimen/y95"
            android:gravity="center"
            android:text="@string/authen_sendpic_tips"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/y42" />
        <Button
            android:id="@+id/btn_send_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y124"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/y90"
            android:background="@drawable/btn_takepic_selector"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/common_white"
            android:textSize="@dimen/y42" />
        <Button
            android:id="@+id/btn_take_pic_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y124"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/y38"
            android:background="@drawable/btn_takepic_gray_selector"
            android:gravity="center"
            android:text="重拍"
            android:textColor="@color/common_white"
            android:textSize="@dimen/y42" />
    </LinearLayout>

</FrameLayout>