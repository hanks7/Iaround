<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_game_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="王者荣耀"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/pic_heart"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_game_info_name"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arraw_turn"/>
        <TextView
            android:id="@+id/tv_game_info_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多"
            android:layout_toLeftOf="@id/iv_arrow"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:textColor="@color/home_page_text_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <net.iaround.ui.view.face.MyGridView
        android:id="@+id/gv_home_page_game_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:listSelector="#00000000"
        android:stretchMode="columnWidth"
        android:verticalSpacing="12dp" />
</LinearLayout>