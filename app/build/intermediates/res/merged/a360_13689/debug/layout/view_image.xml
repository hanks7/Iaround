<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white">

    <ImageView
        android:id="@+id/iv_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="@drawable/encounter_shutter_bg"/>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/x65"
        android:layout_height="@dimen/y65"
        android:layout_marginTop="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_alignParentRight="true"
        android:text="X"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:textSize="@dimen/x45"
        android:visibility="gone"
        android:background="@color/common_grey"/>
    
</RelativeLayout>