<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/userFragment_bg">
    <!--我的圈子-->
    <RelativeLayout
        android:id="@+id/rl_group_myself"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/y36"
        android:background="@color/common_white"
        >
        <TextView
            android:id="@+id/group_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x45"
            android:layout_alignParentLeft="true"
            android:text="@string/group_myself"
            android:textColor="@color/chat_update_edit_user_value"
            android:textSize="@dimen/y42"/>
        <RelativeLayout
            android:layout_width="@dimen/x72"
            android:layout_height="@dimen/y42"
            android:layout_toRightOf="@+id/group_myself"
            android:layout_marginLeft="@dimen/x18"
            android:layout_centerVertical="true"
            android:background="@drawable/group_myself_num_bg">
            <TextView
                android:id="@+id/tvNum_of_myGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/common_white"
                android:textSize="@dimen/y33" />
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x48"
            android:src="@drawable/z_near_small_arrow"/>
    </RelativeLayout>
</LinearLayout>