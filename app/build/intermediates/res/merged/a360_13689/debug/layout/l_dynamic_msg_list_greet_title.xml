<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y162"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivGreetIcon"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/y33"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x42"
            android:src="@drawable/dynamic_like_pres" />

        <ImageView
            android:id="@+id/ivPointer"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y42"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x48"
            android:src="@drawable/pointer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivPointer"
            android:layout_toRightOf="@+id/ivGreetIcon"
            android:orientation="horizontal" >

            <net.iaround.ui.view.HeadPhotoView
                android:id="@+id/ivGreeter1"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y90"
                android:layout_marginRight="@dimen/x18"
                android:src="@drawable/default_avatar_round_light" />

            <net.iaround.ui.view.HeadPhotoView
                android:id="@+id/ivGreeter2"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y90"
                android:layout_marginRight="@dimen/x18"
                android:src="@drawable/default_avatar_round_light" />

            <net.iaround.ui.view.HeadPhotoView
                android:id="@+id/ivGreeter3"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y90"
                android:layout_marginRight="@dimen/x18"
                android:src="@drawable/default_avatar_round_light" />

            <net.iaround.ui.view.HeadPhotoView
                android:id="@+id/ivGreeter4"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y90"
                android:layout_marginRight="@dimen/x18"
                android:layout_gravity="center_vertical"
                android:src="@drawable/default_avatar_round_light"/>

            <net.iaround.ui.view.HeadPhotoView
                android:id="@+id/ivGreeter5"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y90"
                android:layout_marginRight="@dimen/x18"
                android:src="@drawable/default_avatar_round_light" />

            <net.iaround.ui.view.HeadPhotoView
                android:id="@+id/ivGreeter6"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y90"
                android:layout_marginRight="@dimen/x18"
                android:src="@drawable/default_avatar_round_light"/>
            
            <net.iaround.ui.view.HeadPhotoView
                android:id="@+id/ivGreeter7"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y90"
                android:layout_marginRight="@dimen/x18"
                android:src="@drawable/default_avatar_round_light" />
        </LinearLayout>
    </RelativeLayout>
    
    <View
        android:id="@+id/vSplite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y36"
        android:layout_below="@id/rlContent"/>

</RelativeLayout>