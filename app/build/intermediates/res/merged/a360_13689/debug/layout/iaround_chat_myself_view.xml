<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myslef_ly"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:id="@+id/ivSVIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:src="@drawable/z_common_svip_icon" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_999999"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:textSize="12dp"
        android:visibility="gone"/>

    <net.iaround.ui.view.pipeline.UserTitleView
        android:id="@+id/friend_ustitle_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </net.iaround.ui.view.pipeline.UserTitleView>

    <!--魅力排行榜-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_charm_rank_me"
            android:layout_width="42dp"
            android:layout_height="14dp"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/charm_rank_bg"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_time_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="月"
                android:textColor="@color/common_white"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/tv_top_me"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="50"
                android:textColor="@color/common_white"
                android:textSize="11sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_wealth_rank_me"
            android:layout_width="42dp"
            android:layout_height="14dp"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/wealth_rank_bg"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_wealth_time_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="月"
                android:textColor="@color/common_white"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/tv_wealth_top_me"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="50"
                android:textColor="@color/common_white"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>
    <!--成员身份-->
    <LinearLayout
        android:id="@+id/ll_user_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvIdentity_manager_me"
            android:layout_width="40dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="11sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvIdentity_owner_me"
            android:layout_width="40dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="11sp"
            android:visibility="gone"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvName_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_999999"
        android:layout_gravity="center_vertical"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12dp" />
</LinearLayout>