<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_skill_expand_first"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical">


        <RelativeLayout
            android:id="@+id/ll_skill_left_expand_first"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_skill_left_first_main_ex"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/iv_skill_left_first_main_ex"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                  android:layout_centerInParent="true"
                    android:src="@drawable/chat_bar_family_join" />

            </RelativeLayout>

            <net.iaround.ui.view.RatingBarView
                android:id="@+id/rbv_skill_expand_left_first"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/rl_skill_left_first_main_ex"
                android:orientation="horizontal"
                app:singelStarSize="13dp"
                android:gravity="center_vertical"
                app:paddingSpace="6dp"
                />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_skill_center_expand_first"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_center_expand_first"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:src="@drawable/chat_bar_family_join" />

        </LinearLayout>



        <RelativeLayout
            android:id="@+id/ll_skill_right_expand_first"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/ll_skill_center_expand_first"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_skill_right_main_ex"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/iv_skill_right_main_ex"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                   android:layout_centerInParent="true"
                    android:src="@drawable/chat_bar_family_join" />

            </RelativeLayout>

            <net.iaround.ui.view.RatingBarView
                android:id="@+id/rbv_skill_expand_right_first"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:singelStarSize="13dp"
                app:paddingSpace="6dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/rl_skill_right_main_ex"/>


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_skill_expand_second"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/rl_skill_expand_first"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/ll_skill_left_expand_second"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_skill_left_expand_down_main"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
             >
                <ImageView
                    android:id="@+id/iv_skill_left_expand_down_main"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                   android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/chat_bar_family_join"/>

            </RelativeLayout>


            <net.iaround.ui.view.RatingBarView
                android:id="@+id/rbv_skill_expand_down_left_first"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:singelStarSize="13dp"
                app:paddingSpace="6dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/rl_skill_left_expand_down_main">
            </net.iaround.ui.view.RatingBarView>




        </RelativeLayout>





    </RelativeLayout>

</LinearLayout>