<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tabar_actionbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/anchors_certification_theme" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="70dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_certification_video"
                    android:layout_width="0dp"
                    android:layout_height="206dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/anchors_certification_upload_bg">

                    <RelativeLayout
                        android:id="@+id/rl_certification_video_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_certification_video1"
                            android:layout_width="48dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/anchors_certification_video_icon" />

                        <TextView
                            android:id="@+id/tv_certification_video1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_certification_video1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/certification_video_add"
                            android:textColor="@color/common_grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_certification_video2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_certification_video1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/anchors_certification_video_info"
                            android:textColor="#999999"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <net.iaround.ui.view.ProcessImageView
                        android:id="@+id/iv_certification_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:visibility="invisible" />

                    <SurfaceView
                        android:id="@+id/sv_certification_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_certification_video_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/login_btn"
                        android:layout_margin="10dp"
                        android:textSize="13sp"
                        android:visibility="gone" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_certification_cover"
                    android:layout_width="0dp"
                    android:layout_height="206dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/anchors_certification_upload_bg">

                    <RelativeLayout
                        android:id="@+id/rl_certification_cover_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_certification_cover1"
                            android:layout_width="48dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/anchors_certification_cover_icon" />

                        <TextView
                            android:id="@+id/tv_certification_cover1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_certification_cover1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/certification_cover_add"
                            android:textColor="@color/common_grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_certification_cover2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_certification_cover1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/anchors_certification_cover_info"
                            android:textColor="#999999"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <net.iaround.ui.view.ProcessImageView
                        android:id="@+id/iv_certification_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_certification_cover_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:textColor="@color/login_btn"
                        android:textSize="13sp"
                        android:visibility="gone" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_anchors_certification_submit"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@color/login_btn"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/anchors_certification_submit"
        android:textColor="@color/white"
        android:textSize="17sp" />

</RelativeLayout>