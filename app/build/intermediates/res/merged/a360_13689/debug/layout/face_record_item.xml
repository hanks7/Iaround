<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_bg_center_selector" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp" >

        <ImageView
            android:id="@+id/icon_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/record_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/icon_img"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="青蛙王子"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="免费"
                android:textColor="#999999"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/expires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="永久免费"
                android:textColor="#999999"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/buyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/name"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="2014-11-11"
                android:textSize="13dp" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="0.67dp"
            android:layout_alignLeft="@+id/record_info"
            android:layout_alignParentBottom="true"
            android:background="@drawable/listview_item_divider" />
    </RelativeLayout>

</RelativeLayout>